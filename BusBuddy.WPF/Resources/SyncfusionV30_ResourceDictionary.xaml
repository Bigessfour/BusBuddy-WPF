<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">

    <!-- =============================================================================== -->
    <!-- SYNCFUSION WPF V30.1.40 COMPREHENSIVE RESOURCE DICTIONARY                     -->
    <!-- =============================================================================== -->
    <!-- Central repository for all Syncfusion WPF v30.1.40 documented controls       -->
    <!-- SfSkinManager automatically applies FluentDark theme from App.xaml.cs         -->
    <!-- Individual controls reference specific styles from this centralized dictionary -->
    <!-- =============================================================================== -->

    <!-- =============================================================================== -->
    <!-- SECTION 1: BUS BUDDY BRAND COLOR PALETTE                                       -->
    <!-- =============================================================================== -->

    <!-- Primary Brand Colors -->
    <Color x:Key="BusBuddy.Primary">#0078D4</Color>
    <Color x:Key="BusBuddy.SchoolBusYellow">#FFD700</Color>
    <Color x:Key="BusBuddy.SafetyOrange">#FF8C00</Color>
    <Color x:Key="BusBuddy.FleetGreen">#2ECC71</Color>

    <!-- Surface Colors (FluentDark Compatible) -->
    <Color x:Key="BusBuddy.Surface.Dark">#1E1E1E</Color>
    <Color x:Key="BusBuddy.Surface.Medium">#252526</Color>
    <Color x:Key="BusBuddy.Surface.Light">#2D2D30</Color>
    <Color x:Key="BusBuddy.Surface.Border">#323130</Color>

    <!-- Text Colors -->
    <Color x:Key="BusBuddy.Text.Primary">#FFFFFF</Color>
    <Color x:Key="BusBuddy.Text.Secondary">#CCCCCC</Color>
    <Color x:Key="BusBuddy.Text.Disabled">#666666</Color>

    <!-- State Colors -->
    <Color x:Key="BusBuddy.State.Hover">#404040</Color>
    <Color x:Key="BusBuddy.State.Pressed">#4D4D4D</Color>
    <Color x:Key="BusBuddy.State.Selected">#0078D4</Color>

    <!-- Semantic Colors -->
    <Color x:Key="BusBuddy.Semantic.Error">#E74856</Color>
    <Color x:Key="BusBuddy.Semantic.Warning">#FFC107</Color>
    <Color x:Key="BusBuddy.Semantic.Success">#2ECC71</Color>
    <Color x:Key="BusBuddy.Semantic.Info">#17A2B8</Color>

    <!-- =============================================================================== -->
    <!-- SECTION 2: BRAND BRUSHES                                                       -->
    <!-- =============================================================================== -->

    <SolidColorBrush x:Key="BusBuddy.Brush.Primary" Color="{StaticResource BusBuddy.Primary}"/>
    <SolidColorBrush x:Key="BusBuddy.Brush.SchoolBusYellow" Color="{StaticResource BusBuddy.SchoolBusYellow}"/>
    <SolidColorBrush x:Key="BusBuddy.Brush.SafetyOrange" Color="{StaticResource BusBuddy.SafetyOrange}"/>
    <SolidColorBrush x:Key="BusBuddy.Brush.FleetGreen" Color="{StaticResource BusBuddy.FleetGreen}"/>

    <SolidColorBrush x:Key="BusBuddy.Brush.Surface.Dark" Color="{StaticResource BusBuddy.Surface.Dark}"/>
    <SolidColorBrush x:Key="BusBuddy.Brush.Surface.Medium" Color="{StaticResource BusBuddy.Surface.Medium}"/>
    <SolidColorBrush x:Key="BusBuddy.Brush.Surface.Light" Color="{StaticResource BusBuddy.Surface.Light}"/>
    <SolidColorBrush x:Key="BusBuddy.Brush.Surface.Border" Color="{StaticResource BusBuddy.Surface.Border}"/>

    <SolidColorBrush x:Key="BusBuddy.Brush.Text.Primary" Color="{StaticResource BusBuddy.Text.Primary}"/>
    <SolidColorBrush x:Key="BusBuddy.Brush.Text.Secondary" Color="{StaticResource BusBuddy.Text.Secondary}"/>
    <SolidColorBrush x:Key="BusBuddy.Brush.Text.Disabled" Color="{StaticResource BusBuddy.Text.Disabled}"/>

    <!-- =============================================================================== -->
    <!-- SECTION 3: SYNCFUSION V30.1.40 COMPONENT STYLES                               -->
    <!-- =============================================================================== -->
    <!-- All styles inherit FluentDark theme automatically via SfSkinManager           -->
    <!-- These styles provide Bus Buddy specific customizations                        -->

    <!-- 3.1 NAVIGATION CONTROLS -->
    <Style x:Key="BusBuddy.SfNavigationDrawer" TargetType="syncfusion:SfNavigationDrawer">
        <Setter Property="DisplayMode" Value="Expanded"/>
        <Setter Property="Position" Value="Left"/>
        <Setter Property="DrawerWidth" Value="250"/>
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
    </Style>

    <!-- 3.2 DOCKING CONTROLS -->
    <Style x:Key="BusBuddy.DockingManager" TargetType="syncfusion:DockingManager">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}"/>
        <Setter Property="DockFill" Value="True"/>
        <Setter Property="UseDocumentContainer" Value="True"/>
        <Setter Property="ContainerMode" Value="TDI"/>
        <Setter Property="PersistState" Value="True"/>
    </Style>

    <!-- 3.3 DATA GRID CONTROLS -->
    <Style x:Key="BusBuddy.SfDataGrid" TargetType="syncfusion:SfDataGrid">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HeaderLinesVisibility" Value="Horizontal"/>
        <Setter Property="AllowSorting" Value="True"/>
        <Setter Property="AllowFiltering" Value="True"/>
        <Setter Property="RowHeight" Value="32"/>
        <Setter Property="HeaderRowHeight" Value="40"/>
    </Style>

    <!-- 3.4 CHART CONTROLS -->
    <Style x:Key="BusBuddy.SfChart" TargetType="syncfusion:SfChart">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Palette" Value="Metro"/>
    </Style>

    <!-- 3.5 SCHEDULER CONTROLS -->
    <Style x:Key="BusBuddy.SfScheduler" TargetType="syncfusion:SfScheduler">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="ViewType" Value="Week"/>
        <Setter Property="FirstDayOfWeek" Value="Sunday"/>
    </Style>

    <!-- 3.6 BUSY INDICATOR CONTROLS -->
    <Style x:Key="BusBuddy.SfBusyIndicator" TargetType="syncfusion:SfBusyIndicator">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}"/>
        <Setter Property="AnimationType" Value="Gear"/>
        <Setter Property="Header" Value="Loading..."/>
        <Setter Property="ViewboxHeight" Value="50"/>
        <Setter Property="ViewboxWidth" Value="50"/>
    </Style>

    <!-- 3.7 BUTTON CONTROLS -->
    <Style x:Key="BusBuddy.ButtonAdv.Primary" TargetType="syncfusion:ButtonAdv">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Primary}"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Primary}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="CornerRadius" Value="6"/>
    </Style>

    <Style x:Key="BusBuddy.ButtonAdv.SchoolBus" TargetType="syncfusion:ButtonAdv">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.SchoolBusYellow}"/>
        <Setter Property="Foreground" Value="#1E1E1E"/>
        <Setter Property="BorderBrush" Value="#E6C200"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="CornerRadius" Value="6"/>
    </Style>

    <Style x:Key="BusBuddy.ButtonAdv.Safety" TargetType="syncfusion:ButtonAdv">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.SafetyOrange}"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="#E67E22"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="CornerRadius" Value="6"/>
    </Style>

    <Style x:Key="BusBuddy.ButtonAdv.Success" TargetType="syncfusion:ButtonAdv">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.FleetGreen}"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="#27AE60"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="CornerRadius" Value="6"/>
    </Style>

    <Style x:Key="BusBuddy.ButtonAdv.Navigation" TargetType="syncfusion:ButtonAdv">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- 3.8 INPUT CONTROLS -->
    <Style x:Key="BusBuddy.ComboBoxAdv" TargetType="syncfusion:ComboBoxAdv">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- 3.9 GAUGE CONTROLS -->
    <Style x:Key="BusBuddy.SfCircularGauge" TargetType="syncfusion:SfCircularGauge">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- 3.10 PROGRESS CONTROLS -->
    <Style x:Key="BusBuddy.SfCircularProgressBar" TargetType="syncfusion:SfCircularProgressBar">
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Primary}"/>
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="AnimationDuration" Value="0:0:1"/>
        <Setter Property="ProgressColor" Value="{StaticResource BusBuddy.Brush.Primary}"/>
        <Setter Property="TrackColor" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
    </Style>

    <Style x:Key="BusBuddy.SfLinearProgressBar" TargetType="syncfusion:SfLinearProgressBar">
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Primary}"/>
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="AnimationDuration" Value="0:0:1"/>
        <Setter Property="ProgressColor" Value="{StaticResource BusBuddy.Brush.Primary}"/>
        <Setter Property="TrackColor" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
    </Style>

    <!-- =============================================================================== -->
    <!-- SECTION 4: DASHBOARD SPECIFIC STYLES                                           -->
    <!-- =============================================================================== -->

    <Style x:Key="BusBuddy.Dashboard.Tile" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="8"/>
    </Style>

    <Style x:Key="BusBuddy.Dashboard.TileHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <Style x:Key="BusBuddy.Dashboard.TileValue" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Primary}"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- =============================================================================== -->
    <!-- SECTION 5: STANDARD WPF CONTROLS WITH BUS BUDDY THEMING                       -->
    <!-- =============================================================================== -->

    <Style x:Key="BusBuddy.Button.Primary" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Primary}"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Primary}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BusBuddy.ListView" TargetType="ListView">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- =============================================================================== -->
    <!-- SECTION 6: BACKWARD COMPATIBILITY ALIASES                                      -->
    <!-- =============================================================================== -->
    <!-- Legacy style names for existing XAML files                                    -->

    <!-- Primary aliases -->
    <Style x:Key="PrimaryButtonAdvStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddy.ButtonAdv.Primary}"/>
    <Style x:Key="SchoolBusButtonAdvStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddy.ButtonAdv.SchoolBus}"/>
    <Style x:Key="SafetyButtonAdvStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddy.ButtonAdv.Safety}"/>
    <Style x:Key="SuccessButtonAdvStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddy.ButtonAdv.Success}"/>
    <Style x:Key="NavigationButtonAdvStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddy.ButtonAdv.Navigation}"/>

    <!-- Bus Buddy specific button styles -->
    <Style x:Key="BusBuddyPrimaryButtonAdvStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddy.ButtonAdv.Primary}"/>
    <Style x:Key="BusBuddySecondaryButtonAdvStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddy.ButtonAdv.Navigation}">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    <Style x:Key="SecondaryButtonAdvStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddySecondaryButtonAdvStyle}"/>

    <!-- Missing Dashboard Button Styles -->
    <Style x:Key="EmergencyButtonAdvStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddy.ButtonAdv.Safety}">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.FleetGreen}"/>
        <Setter Property="BorderBrush" Value="#C0392B"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style x:Key="FleetSuccessButtonAdvStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddy.ButtonAdv.Success}"/>
    <Style x:Key="IconButtonAdvStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddy.ButtonAdv.Navigation}">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Padding" Value="6"/>
    </Style>

    <!-- Dashboard aliases -->
    <Style x:Key="DashboardTileStyle" TargetType="Border" BasedOn="{StaticResource BusBuddy.Dashboard.Tile}"/>
    <Style x:Key="TileHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource BusBuddy.Dashboard.TileHeader}"/>
    <Style x:Key="TileValueStyle" TargetType="TextBlock" BasedOn="{StaticResource BusBuddy.Dashboard.TileValue}"/>

    <!-- Bus Buddy form and layout styles -->
    <Style x:Key="BusBuddyFormContentStyle" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}"/>
        <Setter Property="Margin" Value="16"/>
    </Style>

    <Style x:Key="BusBuddyFormHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="20,16"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <Style x:Key="BusBuddyTileHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource BusBuddy.Dashboard.TileHeader}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="BusBuddyTileSubHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Secondary}"/>
        <Setter Property="Margin" Value="0,0,0,6"/>
    </Style>

    <Style x:Key="BusBuddyDashboardTileStyle" TargetType="Border" BasedOn="{StaticResource BusBuddy.Dashboard.Tile}">
        <Setter Property="MinHeight" Value="120"/>
        <Setter Property="MinWidth" Value="200"/>
    </Style>

    <!-- Control aliases -->
    <Style x:Key="DataGridStyle" TargetType="syncfusion:SfDataGrid" BasedOn="{StaticResource BusBuddy.SfDataGrid}"/>
    <Style x:Key="StandardDataGridStyle" TargetType="syncfusion:SfDataGrid" BasedOn="{StaticResource BusBuddy.SfDataGrid}"/>
    <Style x:Key="ChartStyle" TargetType="syncfusion:SfChart" BasedOn="{StaticResource BusBuddy.SfChart}"/>
    <Style x:Key="SchedulerStyle" TargetType="syncfusion:SfScheduler" BasedOn="{StaticResource BusBuddy.SfScheduler}"/>
    <Style x:Key="BusyIndicatorStyle" TargetType="syncfusion:SfBusyIndicator" BasedOn="{StaticResource BusBuddy.SfBusyIndicator}"/>
    <Style x:Key="StandardComboBoxStyle" TargetType="syncfusion:ComboBoxAdv" BasedOn="{StaticResource BusBuddy.ComboBoxAdv}"/>

    <!-- Standard control styles -->
    <Style x:Key="StandardButtonStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddy.ButtonAdv.Primary}"/>
    <Style x:Key="StandardTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="StandardListViewStyle" TargetType="ListView" BasedOn="{StaticResource BusBuddy.ListView}"/>

    <Style x:Key="StandardTabControlStyle" TargetType="TabControl">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Context Menu Styles -->
    <Style x:Key="BusBuddyContextMenuStyle" TargetType="ContextMenu">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="HasDropShadow" Value="True"/>
    </Style>

    <Style x:Key="BusBuddyContextMenuItemStyle" TargetType="MenuItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="2"/>
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.State.Hover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="BusBuddyContextMenuSeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="4,2"/>
    </Style>

    <!-- =============================================================================== -->
    <!-- SECTION 7: CRITICAL MISSING STYLES FROM MAINWINDOW                            -->
    <!-- =============================================================================== -->

    <!-- Navigation and Docking Styles - Critical for MainWindow -->
    <Style x:Key="StandardDockingManagerStyle" TargetType="syncfusion:DockingManager" BasedOn="{StaticResource BusBuddy.DockingManager}"/>
    <Style x:Key="StandardNavigationDrawerStyle" TargetType="syncfusion:SfNavigationDrawer" BasedOn="{StaticResource BusBuddy.SfNavigationDrawer}"/>

    <!-- Navigation Item Style -->
    <Style x:Key="NavigationItemStyle" TargetType="syncfusion:NavigationItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="syncfusion:NavigationItem">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}"
                            Margin="{TemplateBinding Margin}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Light}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Primary}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Menu Item Style for Main Menu Bar -->
    <Style x:Key="MenuItemStyle" TargetType="MenuItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Margin" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}"
                            Margin="{TemplateBinding Margin}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <ContentPresenter Grid.Column="0"
                                            ContentSource="Icon"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"/>

                            <!-- Header Text -->
                            <ContentPresenter Grid.Column="1"
                                            ContentSource="Header"
                                            VerticalAlignment="Center"/>

                            <!-- Input Gesture Text -->
                            <TextBlock Grid.Column="2"
                                     Text="{TemplateBinding InputGestureText}"
                                     Margin="16,0,0,0"
                                     VerticalAlignment="Center"
                                     Foreground="{StaticResource BusBuddy.Brush.Text.Secondary}"/>

                            <!-- Submenu Arrow -->
                            <Path Grid.Column="3"
                                  Data="M0,0 L4,4 L0,8 Z"
                                  Fill="{TemplateBinding Foreground}"
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"
                                  Visibility="{Binding HasItems, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Light}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Primary}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Disabled}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Menu Separator Style -->
    <Style x:Key="MenuSeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Border}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="8,4"/>
    </Style>

