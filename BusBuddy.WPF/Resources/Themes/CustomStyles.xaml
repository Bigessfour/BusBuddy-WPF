    <SolidColorBrush x:Key="PressedBackground" Color="#404040" />
    <SolidColorBrush x:Key="SelectedBackground" Color="#0078D4" />
    <SolidColorBrush x:Key="DisabledBackground" Color="#252526" />
    <SolidColorBrush x:Key="DisabledForeground" Color="#666666" />
    <SolidColorBrush x:Key="DisabledBorder" Color="#323130" />

    <!-- Semantic State Colors -->
    <SolidColorBrush x:Key="ErrorBackground" Color="#E74856" />
    <SolidColorBrush x:Key="WarningBackground" Color="#FF8C00" />

    <!-- Secondary and Accent Colors -->
    <SolidColorBrush x:Key="SecondaryBackground" Color="#2D2D30" />
    <SolidColorBrush x:Key="SecondaryBorder" Color="#323130" />
    <SolidColorBrush x:Key="AccentBackground" Color="#0078D4" />
    <SolidColorBrush x:Key="AccentForeground" Color="#FFFFFF" />
