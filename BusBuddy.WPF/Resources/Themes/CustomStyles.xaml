    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryForeground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="PrimaryBorder" Color="#106EBE" />

    <!-- Missing Colors for Custom Controls -->
    <Color x:Key="WarningColor">#FF8C00</Color>
    <Color x:Key="ErrorColor">#E74856</Color>
    <Color x:Key="SuccessColor">#2ECC71</Color>
    <Color x:Key="InfoColor">#0078D4</Color>
