    <!-- Professional Base ButtonAdv Style -->
    <Style x:Key="BusBuddyButtonAdvStyle" TargetType="{x:Type syncfusion:ButtonAdv}">
        <Setter Property="Background" Value="{DynamicResource ProfessionalSurfaceMedium}" />
        <Setter Property="Foreground" Value="{DynamicResource ProfessionalTextPrimary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ProfessionalSurfaceBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="4" Direction="270" ShadowDepth="1" Opacity="0.15"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource ProfessionalInteractiveHover}" />
                <Setter Property="BorderBrush" Value="{DynamicResource BrandPrimaryBrush}" />
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="8" Direction="270" ShadowDepth="2" Opacity="0.25"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource ProfessionalInteractivePressed}" />
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{DynamicResource ProfessionalInteractiveDisabled}" />
                <Setter Property="Foreground" Value="{DynamicResource ProfessionalTextDisabled}" />
                <Setter Property="BorderBrush" Value="{DynamicResource ProfessionalSurfaceBorder}" />
                <Setter Property="Effect" Value="{x:Null}" />
            </Trigger>
        </Style.Triggers>
    </Style>

