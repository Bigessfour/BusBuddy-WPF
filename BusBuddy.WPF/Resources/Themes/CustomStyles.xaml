    <!-- These styles are used across multiple views but were missing from global resources -->
    <!-- Adding them here to prevent StaticResourceExtension exceptions -->
    <!-- =============================================================================== -->

    <!-- Field Label Style â€” Used in forms throughout the application -->
    <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource ContentForeground}" />
        <Setter Property="Margin" Value="0,0,0,5" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Section Header Style â€” Used for form section headers -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}" />
        <Setter Property="Margin" Value="0,20,0,15" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Statistics Card Style â€” Used in dashboard and statistics panels -->
    <Style x:Key="StatCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource ContentBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ContentBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="15,10" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.15" Direction="270"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Statistics Number Style â€” Used for displaying numbers in stat cards -->
    <Style x:Key="StatNumberStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource AccentBackground}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!-- Statistics Label Style â€” Used for labels in stat cards -->
    <Style x:Key="StatLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{DynamicResource ContentForeground}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,5,0,0" />
    </Style>

    <!-- Tile Content Style â€” Used for tile content text -->
    <Style x:Key="BusBuddyTileContentStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{DynamicResource ContentForeground}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,2" />
    </Style>

    <!-- Tile Value Style â€” Used for tile value text -->
    <Style x:Key="BusBuddyTileValueStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource AccentBackground}" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,2" />
    </Style>

    <!-- =============================================================================== -->
    <!-- RESOURCE NAMING CONSISTENCY FIXES â€” BRUSH SUFFIX VARIANTS -->
    <!-- =============================================================================== -->
    <!-- Adding Brush suffix variants to maintain consistency across XAML files -->
    <!-- These are aliases to the existing resources without the Brush suffix -->
    <!-- =============================================================================== -->

    <!-- Background Brush Aliases -->
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#1E1E1E" />
    <SolidColorBrush x:Key="SurfaceBackgroundBrush" Color="#1E1E1E" />
    <SolidColorBrush x:Key="AccentBackgroundBrush" Color="#0078D4" />
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#404040" />
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#0078D4" />
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#2D2D30" />

    <!-- Foreground Brush Aliases -->
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ContentForegroundBrush" Color="#FFFFFF" />

    <!-- Border Brush Aliases -->
    <!-- BorderBrush already defined in main theme resources section â€” removed duplicate -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4" />

    <!-- Semantic State Brush Aliases -->
    <!-- All semantic brushes (SuccessBrush, WarningBrush, ErrorBrush, InfoBrush) -->
    <!-- are already defined in the main theme resources section â€” removed duplicates -->

    <!-- =============================================================================== -->
    <!-- ENHANCED DASHBOARD STYLES â€” MOVED FROM LOCAL TO GLOBAL -->
    <!-- =============================================================================== -->

    <!-- Enhanced Tile Style for Modern Appearance with Theme Support -->
    <Style x:Key="DashboardTileStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource ContentBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ContentBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="12" Direction="270" ShadowDepth="3" Opacity="0.15"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBackground}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="16" Direction="270" ShadowDepth="4" Opacity="0.25"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Enhanced Tile Header Style with Theme Support -->
    <Style x:Key="TileHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource ContentForeground}"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

    <!-- Enhanced Tile Content Style with Theme Support -->
    <Style x:Key="TileContentStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryForeground}"/>
        <Setter Property="Margin" Value="0,0,0,6"/>
