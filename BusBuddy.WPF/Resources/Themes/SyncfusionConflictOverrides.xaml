<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <!-- =============================================================================== -->
    <!-- BUS BUDDY CUSTOM THEME OVERRIDES - RESOLVES SYNCFUSION THEME CONFLICTS          -->
    <!-- =============================================================================== -->
    <!-- This dictionary contains only the resources that conflict with Syncfusion's     -->
    <!-- internal theme resources. It should be loaded AFTER Syncfusion's themes but     -->
    <!-- BEFORE BusBuddyResourceDictionary to ensure our values take precedence.         -->
    <!-- =============================================================================== -->

    <!-- SURFACE COLORS - These are the most common conflict areas -->
    <Color x:Key="SurfaceBorderColor">#323130</Color> <!-- Our renamed border color -->

    <!-- We selectively override only the specific Syncfusion colors that conflict -->
    <!-- with our custom theme, allowing most of their theme to remain intact -->

    <!-- SURFACE BRUSHES -->
    <SolidColorBrush x:Key="SurfaceBorderBrush" Color="{StaticResource SurfaceBorderColor}"/>

    <!-- Add any other conflicting resources here as you discover them during testing -->

</ResourceDictionary>
