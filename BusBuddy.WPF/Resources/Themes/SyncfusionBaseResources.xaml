    <!-- ============================ -->
    <!-- SCHEDULER STYLES             -->
    <!-- ============================ -->

    <!-- Scheduler Style -->
    <Style x:Key="SchedulerStyle" TargetType="syncfusionscheduler:SfScheduler">
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="ViewType" Value="Week"/>
        <Setter Property="FirstDayOfWeek" Value="Sunday"/>
    </Style>

    <!-- ============================ -->
    <!-- GAUGE STYLES                 -->
    <!-- ============================ -->

    <!-- Gauge Style -->
    <Style x:Key="GaugeStyle" TargetType="syncfusiongauge:SfCircularGauge">
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

</ResourceDictionary>
