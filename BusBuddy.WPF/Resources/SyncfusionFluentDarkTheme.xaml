    <!--
    ===============================================================================
    FLUENTDARK THEME BRUSH DEFINITIONS
    ===============================================================================
    These are the core FluentDark theme brushes that are referenced throughout
    the application. They are based on the official Syncfusion FluentDark theme
    color palette and provide consistent theming across all controls.
    ===============================================================================
    -->

    <!-- PRIMARY COLORS -->
    <Color x:Key="FluentDarkPrimaryColor">#2D2D30</Color>
    <Color x:Key="FluentDarkSecondaryColor">#3F3F46</Color>
    <Color x:Key="FluentDarkAccentColor">#007ACC</Color>
    <Color x:Key="FluentDarkSurfaceColor">#252526</Color>
    <Color x:Key="FluentDarkBackgroundColor">#1E1E1E</Color>
    <Color x:Key="FluentDarkErrorColor">#F14C4C</Color>
    <Color x:Key="FluentDarkWarningColor">#F39C12</Color>
    <Color x:Key="FluentDarkSuccessColor">#2ECC71</Color>
    <Color x:Key="FluentDarkInfoColor">#3498DB</Color>

    <!-- TEXT COLORS -->
    <Color x:Key="FluentDarkPrimaryTextColor">#CCCCCC</Color>
    <Color x:Key="FluentDarkSecondaryTextColor">#969696</Color>
    <Color x:Key="FluentDarkMutedTextColor">#808080</Color>
    <Color x:Key="FluentDarkForegroundColor">#F0F0F0</Color>

    <!-- BORDER COLORS -->
    <Color x:Key="FluentDarkBorderColor">#464647</Color>
    <Color x:Key="FluentDarkSecondaryBorderColor">#5A5A5C</Color>

    <!-- BRUSHES - Primary Theme Colors -->
    <SolidColorBrush x:Key="FluentDarkPrimaryBrush" Color="{StaticResource FluentDarkPrimaryColor}"/>
    <SolidColorBrush x:Key="FluentDarkSecondaryBrush" Color="{StaticResource FluentDarkSecondaryColor}"/>
    <SolidColorBrush x:Key="FluentDarkAccentBrush" Color="{StaticResource FluentDarkAccentColor}"/>
    <SolidColorBrush x:Key="FluentDarkSurfaceBrush" Color="{StaticResource FluentDarkSurfaceColor}"/>
    <SolidColorBrush x:Key="FluentDarkBackgroundBrush" Color="{StaticResource FluentDarkBackgroundColor}"/>

    <!-- BRUSHES - Status Colors -->
    <SolidColorBrush x:Key="FluentDarkErrorBrush" Color="{StaticResource FluentDarkErrorColor}"/>
    <SolidColorBrush x:Key="FluentDarkWarningBrush" Color="{StaticResource FluentDarkWarningColor}"/>
    <SolidColorBrush x:Key="FluentDarkSuccessBrush" Color="{StaticResource FluentDarkSuccessColor}"/>
    <SolidColorBrush x:Key="FluentDarkInfoBrush" Color="{StaticResource FluentDarkInfoColor}"/>

    <!-- BRUSHES - Text Colors -->
    <SolidColorBrush x:Key="FluentDarkPrimaryTextBrush" Color="{StaticResource FluentDarkPrimaryTextColor}"/>
    <SolidColorBrush x:Key="FluentDarkSecondaryTextBrush" Color="{StaticResource FluentDarkSecondaryTextColor}"/>
    <SolidColorBrush x:Key="FluentDarkMutedTextBrush" Color="{StaticResource FluentDarkMutedTextColor}"/>
    <SolidColorBrush x:Key="FluentDarkForegroundBrush" Color="{StaticResource FluentDarkForegroundColor}"/>

    <!-- BRUSHES - Borders -->
    <SolidColorBrush x:Key="FluentDarkBorderBrush" Color="{StaticResource FluentDarkBorderColor}"/>
    <SolidColorBrush x:Key="FluentDarkSecondaryBorderBrush" Color="{StaticResource FluentDarkSecondaryBorderColor}"/>

    <!-- HOVER & SELECTION STATES -->
    <SolidColorBrush x:Key="FluentDarkHoverBrush" Color="#404040"/>
    <SolidColorBrush x:Key="FluentDarkSelectionBrush" Color="#094771"/>
    <SolidColorBrush x:Key="FluentDarkFocusBrush" Color="#007ACC"/>

    <!-- TRANSPARENCY VARIANTS -->
    <SolidColorBrush x:Key="FluentDarkPrimaryBrush20" Color="#332D2D30"/>
    <SolidColorBrush x:Key="FluentDarkPrimaryBrush40" Color="#662D2D30"/>
    <SolidColorBrush x:Key="FluentDarkAccentBrush20" Color="#33007ACC"/>
    <SolidColorBrush x:Key="FluentDarkAccentBrush40" Color="#66007ACC"/>

    <!-- GRADIENT BRUSHES -->
    <LinearGradientBrush x:Key="FluentDarkGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource FluentDarkPrimaryColor}" Offset="0"/>
        <GradientStop Color="{StaticResource FluentDarkSecondaryColor}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="FluentDarkAccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource FluentDarkAccentColor}" Offset="0"/>
        <GradientStop Color="#0099FF" Offset="1"/>
    </LinearGradientBrush>

    <!--
    ===============================================================================
    ADDITIONAL THEME RESOURCES
    ===============================================================================
    Common dimensions, styles, and resources that complement the FluentDark theme.
    ===============================================================================
    -->

    <!-- COMMON DIMENSIONS -->
    <Thickness x:Key="FluentDarkDefaultMargin">8</Thickness>
    <Thickness x:Key="FluentDarkDefaultPadding">12,8</Thickness>
    <Thickness x:Key="FluentDarkBorderThickness">1</Thickness>
    <CornerRadius x:Key="FluentDarkCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="FluentDarkRoundedCornerRadius">8</CornerRadius>

    <!-- FONT SIZES -->
    <System:Double x:Key="FluentDarkFontSizeSmall" xmlns:System="clr-namespace:System;assembly=mscorlib">11</System:Double>
    <System:Double x:Key="FluentDarkFontSizeNormal" xmlns:System="clr-namespace:System;assembly=mscorlib">12</System:Double>
    <System:Double x:Key="FluentDarkFontSizeLarge" xmlns:System="clr-namespace:System;assembly=mscorlib">14</System:Double>
    <System:Double x:Key="FluentDarkFontSizeTitle" xmlns:System="clr-namespace:System;assembly=mscorlib">16</System:Double>
    <System:Double x:Key="FluentDarkFontSizeHeader" xmlns:System="clr-namespace:System;assembly=mscorlib">20</System:Double>

    <!-- COMMON STYLES -->
    <Style x:Key="FluentDarkButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource FluentDarkSecondaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FluentDarkBorderBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource FluentDarkBorderThickness}"/>
        <Setter Property="Padding" Value="{StaticResource FluentDarkDefaultPadding}"/>
        <Setter Property="Margin" Value="{StaticResource FluentDarkDefaultMargin}"/>
        <Setter Property="FontSize" Value="{StaticResource FluentDarkFontSizeNormal}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource FluentDarkHoverBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource FluentDarkSelectionBrush}"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource FluentDarkFocusBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="FluentDarkTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource FluentDarkForegroundBrush}"/>
        <Setter Property="FontSize" Value="{StaticResource FluentDarkFontSizeNormal}"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <Style x:Key="FluentDarkTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource FluentDarkSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FluentDarkBorderBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource FluentDarkBorderThickness}"/>
        <Setter Property="Padding" Value="{StaticResource FluentDarkDefaultPadding}"/>
        <Setter Property="Margin" Value="{StaticResource FluentDarkDefaultMargin}"/>
        <Setter Property="FontSize" Value="{StaticResource FluentDarkFontSizeNormal}"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource FluentDarkFocusBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="FluentDarkBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource FluentDarkSurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FluentDarkBorderBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource FluentDarkBorderThickness}"/>
        <Setter Property="CornerRadius" Value="{StaticResource FluentDarkCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource FluentDarkDefaultPadding}"/>
        <Setter Property="Margin" Value="{StaticResource FluentDarkDefaultMargin}"/>
    </Style>

    <!-- ANIMATION RESOURCES -->
    <Storyboard x:Key="FluentDarkFadeInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
    </Storyboard>

    <Storyboard x:Key="FluentDarkFadeOutAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.3"/>
    </Storyboard>

    <Storyboard x:Key="FluentDarkSlideInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" From="50" To="0" Duration="0:0:0.3"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
    </Storyboard>

</ResourceDictionary>
