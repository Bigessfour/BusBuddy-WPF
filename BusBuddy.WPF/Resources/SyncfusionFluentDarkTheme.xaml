<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
                    xmlns:themes="clr-namespace:Syncfusion.Themes.FluentDark.WPF;assembly=Syncfusion.Themes.FluentDark.WPF"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- ðŸŽ¨ SYNCFUSION FLUENT DARK THEME â€” CLEAN VERSION ðŸŽ¨ -->
    <!-- Clean implementation without duplicate resource keys -->

    <!-- ==================== THEME COLOR PALETTE ==================== -->

    <!-- Primary Theme Colors â€” FluentDark Palette -->
    <Color x:Key="FluentDarkPrimaryColor">#2D2D30</Color>
    <Color x:Key="FluentDarkSecondaryColor">#3F3F46</Color>
    <Color x:Key="FluentDarkAccentColor">#007ACC</Color>
    <Color x:Key="FluentDarkSuccessColor">#2ECC71</Color>
    <Color x:Key="FluentDarkWarningColor">#F39C12</Color>
    <Color x:Key="FluentDarkErrorColor">#E74C3C</Color>
    <Color x:Key="FluentDarkInfoColor">#17A2B8</Color>

    <!-- Text Colors -->
    <Color x:Key="FluentDarkPrimaryTextColor">#F1F1F1</Color>
    <Color x:Key="FluentDarkSecondaryTextColor">#CCCCCC</Color>
    <Color x:Key="FluentDarkMutedTextColor">#999999</Color>

    <!-- Background Colors -->
    <Color x:Key="FluentDarkBackgroundColor">#2D2D30</Color>
    <Color x:Key="FluentDarkSurfaceColor">#3F3F46</Color>
    <Color x:Key="FluentDarkHoverColor">#4A4A51</Color>

    <!-- Border Colors -->
    <Color x:Key="FluentDarkBorderColor">#3F3F46</Color>
    <Color x:Key="FluentDarkFocusBorderColor">#007ACC</Color>

    <!-- ==================== SOLID COLOR BRUSHES ==================== -->

    <SolidColorBrush x:Key="FluentDarkPrimaryBrush" Color="{StaticResource FluentDarkPrimaryColor}"/>
    <SolidColorBrush x:Key="FluentDarkSecondaryBrush" Color="{StaticResource FluentDarkSecondaryColor}"/>
    <SolidColorBrush x:Key="FluentDarkAccentBrush" Color="{StaticResource FluentDarkAccentColor}"/>
    <SolidColorBrush x:Key="FluentDarkSuccessBrush" Color="{StaticResource FluentDarkSuccessColor}"/>
    <SolidColorBrush x:Key="FluentDarkWarningBrush" Color="{StaticResource FluentDarkWarningColor}"/>
    <SolidColorBrush x:Key="FluentDarkErrorBrush" Color="{StaticResource FluentDarkErrorColor}"/>
    <SolidColorBrush x:Key="FluentDarkInfoBrush" Color="{StaticResource FluentDarkInfoColor}"/>

    <SolidColorBrush x:Key="FluentDarkPrimaryTextBrush" Color="{StaticResource FluentDarkPrimaryTextColor}"/>
    <SolidColorBrush x:Key="FluentDarkSecondaryTextBrush" Color="{StaticResource FluentDarkSecondaryTextColor}"/>
    <SolidColorBrush x:Key="FluentDarkMutedTextBrush" Color="{StaticResource FluentDarkMutedTextColor}"/>

    <SolidColorBrush x:Key="FluentDarkBackgroundBrush" Color="{StaticResource FluentDarkBackgroundColor}"/>
    <SolidColorBrush x:Key="FluentDarkSurfaceBrush" Color="{StaticResource FluentDarkSurfaceColor}"/>
    <SolidColorBrush x:Key="FluentDarkHoverBrush" Color="{StaticResource FluentDarkHoverColor}"/>

    <SolidColorBrush x:Key="FluentDarkBorderBrush" Color="{StaticResource FluentDarkBorderColor}"/>
    <SolidColorBrush x:Key="FluentDarkFocusBorderBrush" Color="{StaticResource FluentDarkFocusBorderColor}"/>

    <!-- ==================== LEGACY RESOURCE MAPPINGS ==================== -->
    <!-- These provide backward compatibility for UnifiedStyles.xaml and other resource files -->

    <!-- Legacy brush mappings -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource FluentDarkSurfaceColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource FluentDarkBorderColor}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource FluentDarkAccentColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#33007ACC" Opacity="0.2"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#005AA3"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource FluentDarkMutedTextColor}"/>

    <!-- Font families -->
    <FontFamily x:Key="PrimaryFontFamily">Segoe UI</FontFamily>

    <!-- Font sizes -->
    <system:Double x:Key="FontSizeSmall">12</system:Double>
    <system:Double x:Key="FontSizeNormal">14</system:Double>
    <system:Double x:Key="FontSizeLarge">16</system:Double>

    <!-- Additional missing brushes for UnifiedStyles compatibility -->
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#90A4AE"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource FluentDarkSecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource FluentDarkAccentColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource FluentDarkSecondaryColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource FluentDarkErrorColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource FluentDarkWarningColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource FluentDarkSuccessColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource FluentDarkInfoColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource FluentDarkBackgroundColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource FluentDarkPrimaryTextColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource FluentDarkSecondaryTextColor}"/>

    <!-- Font Family resources -->
    <FontFamily x:Key="PrimaryFontFamily">Segoe UI</FontFamily>
    <FontFamily x:Key="MonospaceFontFamily">Consolas</FontFamily>

    <!-- Spacing resources -->
    <Thickness x:Key="SmallMargin">4</Thickness>
    <Thickness x:Key="MediumMargin">8</Thickness>
    <Thickness x:Key="LargeMargin">16</Thickness>
    <Thickness x:Key="XLargeMargin">24</Thickness>

    <!-- Progress bar resources -->
    <SolidColorBrush x:Key="SuccessColor" Color="{StaticResource FluentDarkSuccessColor}"/>
    <SolidColorBrush x:Key="WarningColor" Color="{StaticResource FluentDarkWarningColor}"/>
    <SolidColorBrush x:Key="ErrorColor" Color="{StaticResource FluentDarkErrorColor}"/>

    <!-- ==================== SYNCFUSION BUTTON STYLES ==================== -->

    <!-- Primary Button Style -->
    <Style x:Key="BusBuddyPrimaryButtonStyle" TargetType="syncfusion:ButtonAdv">
        <Setter Property="Background" Value="{StaticResource FluentDarkAccentBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FluentDarkAccentBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
        <Setter Property="SizeMode" Value="Normal"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#0066CC"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#005AA3"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Secondary Button Style -->
    <Style x:Key="BusBuddySecondaryButtonStyle" TargetType="syncfusion:ButtonAdv">
        <Setter Property="Background" Value="{StaticResource FluentDarkSecondaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FluentDarkBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
        <Setter Property="SizeMode" Value="Normal"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource FluentDarkHoverBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Navigation Button Style -->
    <Style x:Key="BusBuddyNavigationButtonStyle" TargetType="syncfusion:ButtonAdv">
        <Setter Property="Background" Value="#003366"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
        <Setter Property="SizeMode" Value="Normal"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#004080"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Icon Button Style -->
    <Style x:Key="BusBuddyIconButtonStyle" TargetType="syncfusion:ButtonAdv">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
        <Setter Property="SizeMode" Value="Small"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource FluentDarkHoverBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ==================== SYNCFUSION INPUT CONTROL STYLES ==================== -->

    <!-- ComboBoxAdv Style -->
    <Style x:Key="BusBuddyComboBoxAdvStyle" TargetType="syncfusion:ComboBoxAdv">
        <Setter Property="Background" Value="{StaticResource FluentDarkSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FluentDarkBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource FluentDarkFocusBorderBrush}"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource FluentDarkFocusBorderBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Base UserControl Style -->
    <Style x:Key="BusBuddyUserControlStyle" TargetType="UserControl">
        <Setter Property="Background" Value="{StaticResource FluentDarkBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
    </Style>

    <!-- Base Window Style -->
    <Style x:Key="BusBuddyWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource FluentDarkBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="WindowStyle" Value="SingleBorderWindow"/>
        <Setter Property="ResizeMode" Value="CanResize"/>
    </Style>

    <!-- BusBuddy Navigation Panel Style -->
    <Style x:Key="BusBuddyNavigationPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource FluentDarkSurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FluentDarkBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.6"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Additional Missing BusBuddy Styles -->

    <!-- Navigation ListView Styles -->
    <Style x:Key="BusBuddyNavigationListViewStyle" TargetType="ListView">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

    <Style x:Key="BusBuddyNavigationListViewItemStyle" TargetType="ListViewItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource FluentDarkHoverBrush}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource FluentDarkAccentBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Data Grid Styles -->
    <Style x:Key="BusBuddySfDataGridStyle" TargetType="syncfusion:SfDataGrid">
        <Setter Property="Background" Value="{StaticResource FluentDarkSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FluentDarkBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="GridLinesVisibility" Value="Both"/>
        <Setter Property="HeaderLinesVisibility" Value="Both"/>
        <Setter Property="AllowResizingColumns" Value="True"/>
        <Setter Property="AllowSorting" Value="True"/>
        <Setter Property="AllowFiltering" Value="True"/>
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
    </Style>

    <!-- Context Menu Styles -->
    <Style x:Key="BusBuddyContextMenuStyle" TargetType="ContextMenu">
        <Setter Property="Background" Value="{StaticResource FluentDarkSurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FluentDarkBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
    </Style>

    <Style x:Key="BusBuddyContextMenuItemStyle" TargetType="MenuItem">
        <Setter Property="Background" Value="{StaticResource FluentDarkSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="{StaticResource FluentDarkHoverBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="BusBuddyContextMenuSeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource FluentDarkBorderBrush}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0,2"/>
    </Style>

    <!-- Form and Layout Styles -->
    <Style x:Key="BusBuddyFormContentStyle" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource FluentDarkBackgroundBrush}"/>
        <Setter Property="Margin" Value="8"/>
    </Style>

    <Style x:Key="BusBuddyFormHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource FluentDarkSurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FluentDarkBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="16,12"/>
    </Style>

    <!-- Additional Button Styles -->
    <Style x:Key="BusBuddyInfoButtonStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddySecondaryButtonStyle}">
        <Setter Property="Background" Value="{StaticResource FluentDarkInfoBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
    </Style>

    <Style x:Key="BusBuddyErrorButtonStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddySecondaryButtonStyle}">
        <Setter Property="Background" Value="{StaticResource FluentDarkErrorBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
    </Style>

    <Style x:Key="BusBuddyDeleteButtonStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddySecondaryButtonStyle}">
        <Setter Property="Background" Value="{StaticResource FluentDarkErrorBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
    </Style>

    <!-- Tile Styles -->
    <Style x:Key="BusBuddyTileHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkPrimaryTextBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style x:Key="BusBuddyDashboardTileStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource FluentDarkSurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FluentDarkBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="4"/>
    </Style>

    <Style x:Key="BusBuddyTileContentStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkSecondaryTextBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style x:Key="BusBuddyTileValueStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkAccentBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Docking Manager Style -->
    <Style x:Key="BusBuddyDockingManagerStyle" TargetType="syncfusion:DockingManager">
        <Setter Property="UseDocumentContainer" Value="True"/>
        <Setter Property="PersistState" Value="True"/>
        <Setter Property="ContainerMode" Value="TDI"/>
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
    </Style>

    <!-- Busy Indicator Style -->
    <Style x:Key="BusBuddySfBusyIndicatorStyle" TargetType="syncfusion:SfBusyIndicator">
        <Setter Property="AnimationType" Value="CircularMaterial"/>
        <Setter Property="ViewboxWidth" Value="50"/>
        <Setter Property="ViewboxHeight" Value="50"/>
        <Setter Property="Foreground" Value="{StaticResource FluentDarkAccentBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

</ResourceDictionary>
