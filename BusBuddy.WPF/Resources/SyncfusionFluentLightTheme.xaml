<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
                    xmlns:themes="clr-namespace:Syncfusion.Themes.FluentLight.WPF;assembly=Syncfusion.Themes.FluentLight.WPF"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- ðŸŒž Syncfusion FluentLight Theme Resource Dictionary ðŸŒž -->

    <!-- Official FluentLight Theme Settings -->
    <themes:FluentLightThemeSettings x:Key="FluentLightThemeSettings"
                                   Palette="Default"
                                   HeaderFontSize="20"
                                   SubHeaderFontSize="16"
                                   TitleFontSize="14"
                                   SubTitleFontSize="12"
                                   BodyFontSize="12"
                                   BodyAltFontSize="10"
                                   FontFamily="Segoe UI"
                                   PrimaryBackground="#FFFFFF"
                                   PrimaryForeground="#000000"/>

    <!-- BusBuddy Application Colors for FluentLight -->
    <SolidColorBrush x:Key="BusBuddyPrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="BusBuddySecondaryBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="BusBuddyAccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="BusBuddySuccessBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="BusBuddyWarningBrush" Color="#FF8C00"/>
    <SolidColorBrush x:Key="BusBuddyErrorBrush" Color="#D13438"/>
    <SolidColorBrush x:Key="BusBuddyInfoBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="BusBuddyPrimaryTextBrush" Color="#000000"/>
    <SolidColorBrush x:Key="BusBuddySecondaryTextBrush" Color="#404040"/>
    <SolidColorBrush x:Key="BusBuddyBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BusBuddySurfaceBrush" Color="#F8F8F8"/>
    <SolidColorBrush x:Key="BusBuddyHoverBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="BusBuddyBorderBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="BusBuddyFocusBorderBrush" Color="#0078D4"/>

    <!-- Application Styles for FluentLight Theme -->
    <Style x:Key="BusBuddyFluentLightUserControlStyle" TargetType="UserControl">
        <Setter Property="Background" Value="{StaticResource BusBuddyBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddyPrimaryTextBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentLight"/>
    </Style>

    <Style x:Key="BusBuddyFluentLightWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BusBuddyBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource BusBuddyPrimaryTextBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentLight"/>
    </Style>

</ResourceDictionary>
