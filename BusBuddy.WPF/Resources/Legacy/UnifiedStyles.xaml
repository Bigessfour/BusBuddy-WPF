<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sf="http://schemas.syncfusion.com/wpf"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
                    xmlns:chart="http://schemas.syncfusion.com/wpf"
                    xmlns:gauge="http://schemas.syncfusion.com/wpf">

    <!--
    ===============================================================================
    BUS BUDDY UNIFIED STYLE SYSTEM — SYNCFUSION EDITION
    ===============================================================================
    This resource dictionary provides a unified styling system for the Bus Buddy
    application using exclusively Syncfusion WPF controls and methods.
    ===============================================================================
    -->

    <!-- GLOBAL COLOR PALETTE — Material Design with Syncfusion compatibility -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#2196F3"/>           <!-- Material Blue -->
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1976D2"/>       <!-- Dark Blue -->
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#BBDEFB"/>      <!-- Light Blue -->
    <SolidColorBrush x:Key="AccentBrush" Color="#4CAF50"/>            <!-- Material Green -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#FF9800"/>         <!-- Material Orange -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>             <!-- Material Red -->
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>           <!-- Material Orange -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>           <!-- Material Green -->
    <SolidColorBrush x:Key="InfoBrush" Color="#2196F3"/>              <!-- Material Blue -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>           <!-- White Surface -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA"/>        <!-- Light Gray Background -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>            <!-- Light Border -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212121"/>       <!-- Dark Text -->
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#757575"/>     <!-- Medium Text -->
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#BDBDBD"/>      <!-- Disabled Text -->

    <!-- TYPOGRAPHY SYSTEM -->
    <FontFamily x:Key="PrimaryFontFamily">Segoe UI</FontFamily>
    <FontFamily x:Key="MonospaceFontFamily">Consolas</FontFamily>

    <!-- Font Sizes -->
    <system:Double x:Key="FontSizeXSmall" xmlns:system="clr-namespace:System;assembly=mscorlib">10</system:Double>
    <system:Double x:Key="FontSizeSmall" xmlns:system="clr-namespace:System;assembly=mscorlib">11</system:Double>
    <system:Double x:Key="FontSizeNormal" xmlns:system="clr-namespace:System;assembly=mscorlib">12</system:Double>
    <system:Double x:Key="FontSizeMedium" xmlns:system="clr-namespace:System;assembly=mscorlib">14</system:Double>
    <system:Double x:Key="FontSizeLarge" xmlns:system="clr-namespace:System;assembly=mscorlib">16</system:Double>
    <system:Double x:Key="FontSizeXLarge" xmlns:system="clr-namespace:System;assembly=mscorlib">20</system:Double>
    <system:Double x:Key="FontSizeXXLarge" xmlns:system="clr-namespace:System;assembly=mscorlib">24</system:Double>

    <!-- SPACING SYSTEM -->
    <Thickness x:Key="SmallMargin">4</Thickness>
    <Thickness x:Key="MediumMargin">8</Thickness>
    <Thickness x:Key="LargeMargin">16</Thickness>
    <Thickness x:Key="XLargeMargin">24</Thickness>

    <!--
    ===============================================================================
    SYNCFUSION CONTROL STYLES
    ===============================================================================
    -->

    <!-- BASE SYNCFUSION DATAGRID STYLE -->
    <Style x:Key="BaseSfDataGridStyle" TargetType="sf:SfDataGrid">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="GridLinesVisibility" Value="Both"/>
        <Setter Property="HeaderLinesVisibility" Value="Both"/>
        <Setter Property="AllowResizingColumns" Value="True"/>
        <Setter Property="AllowSorting" Value="True"/>
        <Setter Property="AllowFiltering" Value="True"/>
        <Setter Property="ColumnSizer" Value="Star"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="SelectionUnit" Value="Row"/>
        <Setter Property="NavigationMode" Value="Row"/>
        <Setter Property="ShowRowHeader" Value="True"/>
        <Setter Property="EnableDataVirtualization" Value="True"/>
        <Setter Property="RowSelectionBrush" Value="{StaticResource PrimaryLightBrush}"/>
        <Setter Property="CurrentCellBorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="CurrentCellBorderThickness" Value="2"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="HeaderRowHeight" Value="35"/>
        <Setter Property="RowHeight" Value="30"/>
    </Style>

    <!-- ENHANCED SYNCFUSION DATAGRID FOR MANAGEMENT VIEWS -->
    <Style x:Key="ManagementDataGridStyle" TargetType="sf:SfDataGrid" BasedOn="{StaticResource BaseSfDataGridStyle}">
        <Setter Property="AllowDraggingColumns" Value="True"/>
        <Setter Property="AllowGrouping" Value="True"/>
        <Setter Property="ShowGroupDropArea" Value="True"/>
        <Setter Property="AllowFiltering" Value="True"/>
        <Setter Property="FilterRowPosition" Value="Top"/>
        <Setter Property="HeaderRowHeight" Value="40"/>
        <Setter Property="RowHeight" Value="35"/>
        <Setter Property="GroupDropAreaText" Value="Drag column headers here to group"/>
        <Setter Property="ShowGroupDropArea" Value="True"/>
    </Style>

    <!-- SYNCFUSION TREEGRID STYLE -->
    <Style x:Key="BaseSfTreeGridStyle" TargetType="sf:SfTreeGrid">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="GridLinesVisibility" Value="Both"/>
        <Setter Property="HeaderLinesVisibility" Value="Both"/>
        <Setter Property="AllowResizingColumns" Value="True"/>
        <Setter Property="AllowSorting" Value="True"/>
        <Setter Property="AllowFiltering" Value="True"/>
        <Setter Property="ColumnSizer" Value="Star"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="NavigationMode" Value="Row"/>
        <Setter Property="ShowRowHeader" Value="True"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="AutoExpandMode" Value="RootNodesExpanded"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="ExpanderColumn" Value="Name"/>
        <Setter Property="ChildPropertyName" Value="Children"/>
        <Setter Property="HeaderRowHeight" Value="35"/>
        <Setter Property="RowHeight" Value="30"/>
        <Setter Property="LiveNodeUpdateMode" Value="AllowDataShaping"/>
    </Style>

    <!-- SYNCFUSION BUTTON STYLES -->
    <Style x:Key="PrimaryButtonStyle" TargetType="syncfusion:ButtonAdv">
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="Height" Value="36"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#1565C0"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{StaticResource TextDisabledBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource SurfaceBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="syncfusion:ButtonAdv">
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="Height" Value="36"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource SurfaceBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="DangerButtonStyle" TargetType="syncfusion:ButtonAdv">
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
        <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="Height" Value="36"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#D32F2F"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#C62828"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="AccentButtonStyle" TargetType="syncfusion:ButtonAdv">
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="Height" Value="36"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#388E3C"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#2E7D32"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- SYNCFUSION INPUT CONTROLS -->
    <Style x:Key="StandardTextBoxStyle" TargetType="sf:SfTextBoxExt">
        <Setter Property="Height" Value="36"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="StandardComboBoxStyle" TargetType="syncfusion:ComboBoxAdv">
        <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- SYNCFUSION CHART STYLES -->
    <Style x:Key="StandardChartStyle" TargetType="sf:SfChart">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Palette" Value="Metro"/>
    </Style>

    <!-- SYNCFUSION DOCKING MANAGER STYLE -->
    <Style x:Key="StandardDockingManagerStyle" TargetType="sf:DockingManager">
        <Setter Property="UseDocumentContainer" Value="True"/>
        <Setter Property="PersistState" Value="True"/>
        <Setter Property="ContainerMode" Value="TDI"/>
    </Style>

    <!-- SYNCFUSION BUSY INDICATOR STYLE -->
    <Style x:Key="StandardBusyIndicatorStyle" TargetType="sf:SfBusyIndicator">
        <Setter Property="AnimationType" Value="CircularMaterial"/>
        <Setter Property="ViewboxWidth" Value="50"/>
        <Setter Property="ViewboxHeight" Value="50"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!--
    ===============================================================================
    NAVIGATION STYLES — Using definitions from SyncfusionFluentDarkTheme.xaml
    ===============================================================================
    Navigation styles are defined in SyncfusionFluentDarkTheme.xaml to ensure
    proper FluentDark theme integration. These include:
    — BusBuddyNavigationPanelStyle
    — BusBuddyNavigationListViewStyle
    — BusBuddyNavigationListViewItemStyle
    ===============================================================================
    -->

    <!--
    ===============================================================================
    LAYOUT AND CONTAINER STYLES
    ===============================================================================
    -->



    <!-- Standard Page Container -->
    <Style x:Key="PageContainerStyle" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Margin" Value="{StaticResource LargeMargin}"/>
    </Style>

    <!-- Standard Card Container -->
    <Style x:Key="CardContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="{StaticResource LargeMargin}"/>
        <Setter Property="Margin" Value="{StaticResource MediumMargin}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="8" Direction="270" ShadowDepth="2" Opacity="0.1"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!--
    ===============================================================================
    TYPOGRAPHY STYLES
    ===============================================================================
    -->

    <!-- Page Title Style -->
    <Style x:Key="PageTitleStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeXXLarge}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Section Header Style -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Body Text Style -->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="LineHeight" Value="20"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- Caption Text Style -->
    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="LineHeight" Value="16"/>
    </Style>

    <!--
    ===============================================================================
    STATUS AND INDICATOR STYLES
    ===============================================================================
    -->

    <!-- Success Status Style -->
    <Style x:Key="SuccessStatusStyle" TargetType="Border">
        <Setter Property="Background" Value="#E8F5E8"/>
        <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- Warning Status Style -->
    <Style x:Key="WarningStatusStyle" TargetType="Border">
        <Setter Property="Background" Value="#FFF8E1"/>
        <Setter Property="BorderBrush" Value="{StaticResource WarningBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- Error Status Style -->
    <Style x:Key="ErrorStatusStyle" TargetType="Border">
        <Setter Property="Background" Value="#FFEBEE"/>
        <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- Info Status Style -->
    <Style x:Key="InfoStatusStyle" TargetType="Border">
        <Setter Property="Background" Value="#E3F2FD"/>
        <Setter Property="BorderBrush" Value="{StaticResource InfoBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!--
    ===============================================================================
    WINDOW AND MAIN CONTAINER STYLES
    ===============================================================================
    -->

    <!-- Main Window Style -->
    <Style x:Key="BusBuddyWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="WindowStyle" Value="SingleBorderWindow"/>
        <Setter Property="ResizeMode" Value="CanResize"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
    </Style>

    <!-- Icon Button Style — Compatible with FluentDark theme -->
    <Style x:Key="BusBuddyIconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--
    ===============================================================================
    NOTE: BusBuddyNavigationButtonStyle is defined in SyncfusionFluentDarkTheme.xaml
    for proper FluentDark theme integration
    ===============================================================================
    -->

</ResourceDictionary>
