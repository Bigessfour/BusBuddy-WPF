<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sf="http://schemas.syncfusion.com/wpf"
                    xmlns:sfshared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF">

    <!-- Fix for Syncfusion DateTimePattern enumeration issues -->
    <!-- This style ensures all GridDateTimeColumns use valid patterns -->
    <Style TargetType="sf:GridDateTimeColumn">
        <Setter Property="Pattern" Value="ShortDate"/>
        <Setter Property="DateTimeFormat" Value="d"/>
    </Style>

    <!-- Fix for DateTimeEdit controls -->
    <Style TargetType="sfshared:DateTimeEdit">
        <Setter Property="Pattern" Value="ShortDate"/>
    </Style>

</ResourceDictionary>
