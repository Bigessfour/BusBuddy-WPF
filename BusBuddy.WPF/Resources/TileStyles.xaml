<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Bus Management Tile Style -->
    <Style x:Key="BusManagementTileStyle" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF1976D2" Offset="0"/>
                    <GradientStop Color="#FF1565C0" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Student Management Tile Style -->
    <Style x:Key="StudentManagementTileStyle" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF388E3C" Offset="0"/>
                    <GradientStop Color="#FF2E7D32" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Driver Management Tile Style -->
    <Style x:Key="DriverManagementTileStyle" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF57C00" Offset="0"/>
                    <GradientStop Color="#FFEF6C00" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Route Management Tile Style -->
    <Style x:Key="RouteManagementTileStyle" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF7B1FA2" Offset="0"/>
                    <GradientStop Color="#FF6A1B9A" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Schedule Management Tile Style -->
    <Style x:Key="ScheduleManagementTileStyle" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFD32F2F" Offset="0"/>
                    <GradientStop Color="#FFC62828" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Maintenance Management Tile Style -->
    <Style x:Key="MaintenanceManagementTileStyle" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF00796B" Offset="0"/>
                    <GradientStop Color="#FF00695C" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Fuel Management Tile Style -->
    <Style x:Key="FuelManagementTileStyle" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF795548" Offset="0"/>
                    <GradientStop Color="#FF6D4C41" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Reporting Tile Style -->
    <Style x:Key="ReportingTileStyle" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF455A64" Offset="0"/>
                    <GradientStop Color="#FF37474F" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Overview Statistics Tile Style -->
    <Style x:Key="OverviewTileStyle" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF303F9F" Offset="0"/>
                    <GradientStop Color="#FF283593" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Quick Actions Tile Style -->
    <Style x:Key="QuickActionsTileStyle" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFFF5722" Offset="0"/>
                    <GradientStop Color="#FFE64A19" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Tile Content Style -->
    <Style x:Key="TileContentStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Tile Title Style -->
    <Style x:Key="TileTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Tile Value Style -->
    <Style x:Key="TileValueStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <!-- Tile Description Style -->
    <Style x:Key="TileDescriptionStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#E0FFFFFF"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

</ResourceDictionary>
