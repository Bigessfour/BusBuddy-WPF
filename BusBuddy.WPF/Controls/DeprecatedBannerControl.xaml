<UserControl x:Class="BusBuddy.WPF.Controls.DeprecatedBannerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Border Background="#FFF8D7" BorderBrush="#FFE0B2" BorderThickness="1" CornerRadius="4">
        <Grid Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Warning Icon -->
            <TextBlock Grid.Column="0" Text="âš " FontSize="22" Foreground="#F57C00" VerticalAlignment="Center" Margin="0,0,10,0"/>
            
            <!-- Message -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="MainMessageText" Text="This module has been deprecated and will be removed in a future version." 
                           FontWeight="SemiBold" Foreground="#D84315"/>
                <TextBlock x:Name="DetailMessageText" Text="Please use the alternative module for this functionality." 
                           Foreground="#555555" TextWrapping="Wrap"/>
            </StackPanel>
            
            <!-- Learn More Button -->
            <Button Grid.Column="2" Content="Learn More" Padding="8,3" Margin="10,0,0,0" 
                    x:Name="LearnMoreButton" Click="LearnMoreButton_Click"/>
        </Grid>
    </Border>
</UserControl>
