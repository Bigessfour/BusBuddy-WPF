<UserControl x:Class="BusBuddy.WPF.Views.Route.RouteManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BusBuddy.WPF.ViewModels"
             xmlns:models="clr-namespace:BusBuddy.Core.Models;assembly=BusBuddy.Core"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- DataContext will be set via DI in code-behind -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <sf:SfDataGrid Grid.Row="0"
                       ItemsSource="{Binding Routes}"
                       SelectedItem="{Binding SelectedRoute, Mode=TwoWay}"
                       AutoGenerateColumns="False">
            <sf:SfDataGrid.Columns>
                <sf:GridTextColumn MappingName="RouteName" HeaderText="Route Name" />
                <sf:GridTextColumn MappingName="Description" HeaderText="Description" />
                <sf:GridDateTimeColumn MappingName="Date" HeaderText="Date" Pattern="ShortDate" />
                <sf:GridCheckBoxColumn MappingName="IsActive" HeaderText="Active" />
                <sf:GridComboBoxColumn MappingName="AMVehicleId" HeaderText="AM Bus"
                                       ItemsSource="{Binding DataContext.Buses, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       DisplayMemberPath="BusNumber"
                                       SelectedValuePath="BusId" />
                <sf:GridComboBoxColumn MappingName="AMDriverId" HeaderText="AM Driver"
                                       ItemsSource="{Binding DataContext.Drivers, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       DisplayMemberPath="FullName"
                                       SelectedValuePath="DriverId" />
                <sf:GridComboBoxColumn MappingName="PMVehicleId" HeaderText="PM Bus"
                                       ItemsSource="{Binding DataContext.Buses, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       DisplayMemberPath="BusNumber"
                                       SelectedValuePath="BusId" />
                <sf:GridComboBoxColumn MappingName="PMDriverId" HeaderText="PM Driver"
                                       ItemsSource="{Binding DataContext.Drivers, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       DisplayMemberPath="FullName"
                                       SelectedValuePath="DriverId" />
            </sf:SfDataGrid.Columns>
        </sf:SfDataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add" Command="{Binding AddRouteCommand}" Margin="5" />
            <Button Content="Update" Command="{Binding UpdateRouteCommand}" Margin="5" />
            <Button Content="Delete" Command="{Binding DeleteRouteCommand}" Margin="5" />
        </StackPanel>
    </Grid>
</UserControl>
