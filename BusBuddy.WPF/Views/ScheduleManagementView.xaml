<UserControl x:Class="BusBuddy.WPF.Views.ScheduleManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <sf:SfDataGrid Grid.Row="0"
                       ItemsSource="{Binding Schedules}"
                       SelectedItem="{Binding SelectedSchedule, Mode=TwoWay}"
                       AutoGenerateColumns="False">
            <sf:SfDataGrid.Columns>
                <sf:GridTextColumn MappingName="Destination" HeaderText="Destination"/>
                <sf:GridComboBoxColumn MappingName="BusId" HeaderText="Bus"
                                       ItemsSource="{Binding DataContext.Buses, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       DisplayMemberPath="BusNumber"
                                       SelectedValuePath="BusId" />
                <sf:GridComboBoxColumn MappingName="DriverId" HeaderText="Driver"
                                       ItemsSource="{Binding DataContext.Drivers, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       DisplayMemberPath="FullName"
                                       SelectedValuePath="DriverId" />
                <sf:GridTimeSpanColumn MappingName="LeaveTime" HeaderText="Departure"/>
                <sf:GridTimeSpanColumn MappingName="EventTime" HeaderText="Arrival"/>
                <sf:GridTextColumn MappingName="Status" HeaderText="Status"/>
            </sf:SfDataGrid.Columns>
        </sf:SfDataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add" Command="{Binding AddScheduleCommand}" Margin="5" />
            <Button Content="Update" Command="{Binding UpdateScheduleCommand}" Margin="5" />
            <Button Content="Delete" Command="{Binding DeleteScheduleCommand}" Margin="5" />
        </StackPanel>
    </Grid>
</UserControl>
