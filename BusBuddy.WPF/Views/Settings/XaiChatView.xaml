<UserControl x:Class="BusBuddy.WPF.Views.Settings.XaiChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400">
    <UserControl.Resources>
        <Style x:Key="ChatBubbleStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="MaxWidth" Value="300"/>
        </Style>
        
        <Style x:Key="UserMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatBubbleStyle}">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        
        <Style x:Key="XaiMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatBubbleStyle}">
            <Setter Property="Background" Value="#F3F2F1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#0078D4" Padding="16,12">
            <TextBlock Text="XAI Chat Assistant" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Chat Messages -->
        <ScrollViewer Grid.Row="1" 
                      x:Name="MessagesScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="8">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource ChatBubbleStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsUser}" Value="True">
                                            <Setter Property="Background" Value="#0078D4"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsUser}" Value="False">
                                            <Setter Property="Background" Value="#F3F2F1"/>
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{Binding Message}" 
                                       TextWrapping="Wrap">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsUser}" Value="False">
                                                <Setter Property="Foreground" Value="Black"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Input Area -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#E1E5E9" BorderThickness="0,1,0,0">
            <Grid Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0"
                         Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="False"
                         Padding="12,8"
                         FontSize="14"
                         BorderBrush="#E1E5E9"
                         BorderThickness="1"
                         VerticalContentAlignment="Center"
                         x:Name="InputTextBox">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SendXaiMessageCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                
                <Button Grid.Column="1"
                        Command="{Binding SendXaiMessageCommand}"
                        Margin="8,0,0,0"
                        Padding="16,8"
                        Background="#0078D4"
                        Foreground="White"
                        BorderBrush="#0078D4"
                        BorderThickness="1"
                        Content="Send"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
