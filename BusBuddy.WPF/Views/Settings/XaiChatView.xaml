<UserControl x:Class="BusBuddy.WPF.Views.Settings.XaiChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:syncfusionchat="clr-namespace:Syncfusion.UI.Xaml.Chat;assembly=Syncfusion.SfChat.WPF"
             xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="400"
             syncfusionskin:SfSkinManager.VisualStyle="FluentDark">

    <!-- No UserControl.Resources needed â€” SfSkinManager handles theme automatically -->

    <Grid Background="{DynamicResource ContentBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource PrimaryBackground}"
                Padding="16,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ¤–"
                           FontSize="18"
                           Margin="0,0,8,0"
                           VerticalAlignment="Center"/>
                <TextBlock Text="Bus Buddy AI Assistant"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryForeground}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Syncfusion AI AssistView -->
        <syncfusionchat:SfAIAssistView Grid.Row="1"
                            x:Name="AIAssistView"
                            CurrentUser="{Binding CurrentUser}"
                            Messages="{Binding Messages}"
                            Suggestions="{Binding Suggestions}"
                            ShowTypingIndicator="{Binding IsTyping}"
                            syncfusionskin:SfSkinManager.VisualStyle="FluentDark"
                            Background="{DynamicResource ContentBackground}"
                            Foreground="{DynamicResource ContentForeground}"
                            Margin="0"/>
    </Grid>
</UserControl>
