<UserControl x:Class="BusBuddy.WPF.Views.Driver.DriverManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <sf:SfDataGrid x:Name="driversGrid" Grid.Row="0"
                       ItemsSource="{Binding Drivers}"
                       SelectedItem="{Binding SelectedDriver, Mode=TwoWay}"
                       AutoGenerateColumns="False">
            <sf:SfDataGrid.Columns>
                <sf:GridTextColumn MappingName="FirstName" HeaderText="First Name" />
                <sf:GridTextColumn MappingName="LastName" HeaderText="Last Name" />
                <sf:GridTextColumn MappingName="ContactPhone" HeaderText="Phone" />
                <sf:GridTextColumn MappingName="ContactEmail" HeaderText="Email" />
                <sf:GridDateTimeColumn MappingName="HireDate" HeaderText="Hire Date" />
                <sf:GridDateTimeColumn MappingName="LicenseExpiryDate" HeaderText="License Expiry" />
            </sf:SfDataGrid.Columns>
        </sf:SfDataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add" Command="{Binding AddDriverCommand}" Margin="5" />
            <Button Content="Update" Command="{Binding UpdateDriverCommand}" Margin="5" />
            <Button Content="Delete" Command="{Binding DeleteDriverCommand}" Margin="5" />
        </StackPanel>

        <Expander Grid.Row="2" Header="License Status Report" Margin="0,10,0,0">
            <StackPanel>
                <Button Content="Generate Report" Command="{Binding GenerateLicenseStatusReportCommand}" HorizontalAlignment="Left" Margin="5"/>
                <sf:SfDataGrid x:Name="licenseStatusGrid" ItemsSource="{Binding LicenseStatusReport}" AutoGenerateColumns="False" Margin="0,5,0,0">
                    <sf:SfDataGrid.Columns>
                        <sf:GridTextColumn MappingName="DriverName" HeaderText="Driver Name"/>
                        <sf:GridTextColumn MappingName="LicenseStatus" HeaderText="Status"/>
                        <sf:GridDateTimeColumn MappingName="LicenseExpiry" HeaderText="Expiry Date"/>
                    </sf:SfDataGrid.Columns>
                </sf:SfDataGrid>
            </StackPanel>
        </Expander>

    </Grid>
</UserControl>
