<UserControl x:Class="BusBuddy.WPF.Views.Maintenance.MaintenanceTrackingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
             xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
             xmlns:gauge="clr-namespace:Syncfusion.UI.Xaml.Gauges;assembly=Syncfusion.SfGauge.WPF"
             xmlns:viewModels="clr-namespace:BusBuddy.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance viewModels:MaintenanceTrackingViewModel}"
             Style="{StaticResource BusBuddyUserControlStyle}"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Use FluentDark theme brushes instead of hardcoded colors -->
        <SolidColorBrush x:Key="HighPriorityBrush" Color="{StaticResource FluentDarkErrorColor}"/>
        <SolidColorBrush x:Key="MediumPriorityBrush" Color="{StaticResource FluentDarkWarningColor}"/>
        <SolidColorBrush x:Key="LowPriorityBrush" Color="{StaticResource FluentDarkSuccessColor}"/>
        <SolidColorBrush x:Key="PendingStatusBrush" Color="{StaticResource FluentDarkWarningColor}"/>
        <SolidColorBrush x:Key="CompletedStatusBrush" Color="{StaticResource FluentDarkSuccessColor}"/>
        <SolidColorBrush x:Key="OverdueStatusBrush" Color="{StaticResource FluentDarkErrorColor}"/>
    </UserControl.Resources>

    <!-- Enhanced Maintenance Tracking with Syncfusion DockingManager -->
    <syncfusion:DockingManager UseDocumentContainer="True"
                              PersistState="False"
                              ContainerMode="TDI"
                              Style="{StaticResource BusBuddyDockingManagerStyle}"
                              syncfusionskin:SfSkinManager.VisualStyle="FluentDark"
                              Background="{StaticResource FluentDarkBackgroundBrush}">

        <!-- Maintenance Overview (Document) -->
        <ContentControl syncfusion:DockingManager.Header="Maintenance Overview"
                       syncfusion:DockingManager.State="Document"
                       syncfusion:DockingManager.CanSerialize="True">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Enhanced Header -->
                <DockPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="🔧 Maintenance Tracking"
                              Style="{StaticResource BusBuddyTileHeaderStyle}"
                              DockPanel.Dock="Left"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <syncfusion:ButtonAdv x:Name="AddMaintenanceButton"
                                            Label="➕ New Maintenance"
                                            Command="{Binding AddCommand}"
                                            Style="{StaticResource BusBuddyPrimaryButtonStyle}"
                                            syncfusionskin:SfSkinManager.VisualStyle="FluentDark"
                                            Margin="5"
                                            Click="AddMaintenanceButton_Click"/>
                        <syncfusion:ButtonAdv x:Name="GenerateReportButton"
                                            Label="📊 Generate Report"
                                            Command="{Binding ReportCommand}"
                                            Style="{StaticResource BusBuddySecondaryButtonStyle}"
                                            syncfusionskin:SfSkinManager.VisualStyle="FluentDark"
                                            Margin="5"
                                            Click="GenerateReportButton_Click"/>
                        <syncfusion:ButtonAdv x:Name="RefreshMaintenanceButton"
                                            Label="🔄 Refresh"
                                            Style="{StaticResource BusBuddySecondaryButtonStyle}"
                                            syncfusionskin:SfSkinManager.VisualStyle="FluentDark"
                                            Margin="5"
                                            Click="RefreshMaintenanceButton_Click"/>
                    </StackPanel>
                </DockPanel>

                <!-- Enhanced Maintenance Metrics Dashboard -->
                <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,20">
                    <!-- Pending Maintenance Tile -->
                    <Border x:Name="PendingMaintenanceTile"
                           Style="{StaticResource BusBuddyDashboardTileStyle}"
                           MouseLeftButtonDown="MaintenanceTile_MouseLeftButtonDown">
                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="⏳ Pending" FontSize="14" FontWeight="SemiBold"
                                          Foreground="{StaticResource FluentDarkWarningBrush}" DockPanel.Dock="Left"/>
                                <Ellipse Width="10" Height="10" Fill="{StaticResource FluentDarkWarningBrush}" DockPanel.Dock="Right"
                                        VerticalAlignment="Center"/>
                            </DockPanel>
                            <TextBlock Text="{Binding PendingMaintenanceCount}"
                                      FontSize="28" FontWeight="Bold"
                                      Foreground="{StaticResource FluentDarkWarningBrush}"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,5"/>
                            <TextBlock Text="Items" FontSize="12"
                                      Foreground="{StaticResource FluentDarkSecondaryTextBrush}"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Overdue Maintenance Tile -->
                    <Border x:Name="OverdueMaintenanceTile"
                           Style="{StaticResource BusBuddyDashboardTileStyle}"
                           MouseLeftButtonDown="MaintenanceTile_MouseLeftButtonDown">
                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="🚨 Overdue" FontSize="14" FontWeight="SemiBold"
                                          Foreground="{StaticResource FluentDarkErrorBrush}" DockPanel.Dock="Left"/>
                                <Ellipse Width="10" Height="10" Fill="{StaticResource FluentDarkErrorBrush}" DockPanel.Dock="Right"
                                        VerticalAlignment="Center"/>
                            </DockPanel>
                            <TextBlock Text="{Binding OverdueMaintenanceCount}"
                                      FontSize="28" FontWeight="Bold"
                                      Foreground="{StaticResource FluentDarkErrorBrush}"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,5"/>
                            <TextBlock Text="Critical" FontSize="12"
                                      Foreground="{StaticResource FluentDarkSecondaryTextBrush}"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Completed This Month Tile -->
                    <Border x:Name="CompletedMaintenanceTile"
                           Style="{StaticResource BusBuddyDashboardTileStyle}"
                           MouseLeftButtonDown="MaintenanceTile_MouseLeftButtonDown">
                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="✅ Completed" FontSize="14" FontWeight="SemiBold"
                                          Foreground="{StaticResource FluentDarkSuccessBrush}" DockPanel.Dock="Left"/>
                                <Ellipse Width="10" Height="10" Fill="{StaticResource FluentDarkSuccessBrush}" DockPanel.Dock="Right"
                                        VerticalAlignment="Center"/>
                            </DockPanel>
                            <TextBlock Text="{Binding CompletedMaintenanceCount}"
                                      FontSize="28" FontWeight="Bold"
                                      Foreground="{StaticResource FluentDarkSuccessBrush}"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,5"/>
                            <TextBlock Text="This Month" FontSize="12"
                                      Foreground="{StaticResource FluentDarkSecondaryTextBrush}"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Cost Analysis Tile with Gauge -->
                    <Border x:Name="CostAnalysisTile"
                           Style="{StaticResource BusBuddyDashboardTileStyle}"
                           MouseLeftButtonDown="MaintenanceTile_MouseLeftButtonDown">
                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="💰 Monthly Cost" FontSize="14" FontWeight="SemiBold"
                                          Foreground="{StaticResource FluentDarkAccentBrush}" DockPanel.Dock="Left"/>
                                <Ellipse Width="10" Height="10" Fill="{StaticResource FluentDarkAccentBrush}" DockPanel.Dock="Right"
                                        VerticalAlignment="Center"/>
                            </DockPanel>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding MonthlyMaintenanceCost, StringFormat='{}{0:C0}'}"
                                              FontSize="18" FontWeight="Bold"
                                              Foreground="{StaticResource FluentDarkAccentBrush}"/>
                                    <TextBlock Text="Budget Usage:" FontSize="10"
                                              Foreground="{StaticResource FluentDarkSecondaryTextBrush}" Margin="0,5,0,0"/>
                                    <syncfusion:SfLinearProgressBar Progress="{Binding BudgetUsagePercentage}"
                                                                   Height="8"
                                                                   Background="{StaticResource FluentDarkSurfaceBrush}"
                                                                   Foreground="{StaticResource FluentDarkAccentBrush}"
                                                                   syncfusionskin:SfSkinManager.VisualStyle="FluentDark"
                                                                   Minimum="0" Maximum="100"/>
                                </StackPanel>
                                <gauge:SfCircularGauge Grid.Column="1" Width="50" Height="50" Margin="5,0,0,0">
                                    <gauge:SfCircularGauge.Scales>
                                        <gauge:CircularScale StartAngle="135" SweepAngle="270"
                                                           StartValue="0" EndValue="100"
                                                           ShowTicks="False" ShowLabels="False"
                                                           RimStroke="{StaticResource FluentDarkBorderBrush}" RimStrokeThickness="4">
                                            <gauge:CircularScale.Pointers>
                                                <gauge:CircularPointer NeedlePointerType="Triangle"
                                                                     PointerCapStroke="{StaticResource FluentDarkAccentBrush}"
                                                                     NeedlePointerStroke="{StaticResource FluentDarkAccentBrush}"
                                                                     Value="{Binding BudgetUsagePercentage}"/>
                                            </gauge:CircularScale.Pointers>
                                            <gauge:CircularScale.Ranges>
                                                <gauge:CircularRange StartValue="0" EndValue="100"
                                                                   Stroke="{StaticResource FluentDarkAccentBrush}" StrokeThickness="4"/>
                                            </gauge:CircularScale.Ranges>
                                        </gauge:CircularScale>
                                    </gauge:SfCircularGauge.Scales>
                                </gauge:SfCircularGauge>
                            </Grid>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Enhanced Main Maintenance Grid -->
                <syncfusion:SfDataGrid x:Name="MaintenanceGrid"
                                      Grid.Row="2"
                                      ItemsSource="{Binding MaintenanceRecords}"
                                      SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                                      Style="{StaticResource BusBuddySfDataGridStyle}"
                                      syncfusionskin:SfSkinManager.VisualStyle="FluentDark"
                                      Background="{StaticResource FluentDarkBackgroundBrush}"
                                      Foreground="{StaticResource FluentDarkPrimaryTextBrush}"
                                      BorderBrush="{StaticResource FluentDarkBorderBrush}"
                                      AutoGenerateColumns="False"
                                      AllowResizingColumns="True"
                                      AllowSorting="True"
                                      AllowFiltering="True"
                                      AllowGrouping="True"
                                      ShowGroupDropArea="True"
                                      ColumnSizer="Star"
                                      SelectionMode="Single"
                                      NavigationMode="Row"
                                      AllowEditing="False"
                                      ShowRowHeader="False"
                                      BorderThickness="1"
                                      GridLinesVisibility="Both"
                                      SelectionChanged="MaintenanceGrid_SelectionChanged"
                                      CellTapped="MaintenanceGrid_CellTapped">
                    <syncfusion:SfDataGrid.Columns>
                        <!-- Enhanced Bus Column with Visual Indicator -->
                        <syncfusion:GridTemplateColumn MappingName="BusNumber" HeaderText="Bus" Width="100">
                            <syncfusion:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource FluentDarkSurfaceBrush}" CornerRadius="4" Padding="6,3" Margin="2">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🚌" FontSize="12" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding BusNumber}"
                                                      FontWeight="SemiBold" FontSize="11"
                                                      Foreground="{StaticResource FluentDarkPrimaryTextBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </syncfusion:GridTemplateColumn.CellTemplate>
                        </syncfusion:GridTemplateColumn>

                        <!-- Maintenance Type with Icon -->
                        <syncfusion:GridTemplateColumn MappingName="MaintenanceType" HeaderText="Type" Width="140">
                            <syncfusion:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🔧" FontSize="12" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding MaintenanceType}"
                                                  FontSize="11" VerticalAlignment="Center"
                                                  Foreground="{StaticResource FluentDarkPrimaryTextBrush}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </syncfusion:GridTemplateColumn.CellTemplate>
                        </syncfusion:GridTemplateColumn>

                        <!-- Enhanced Date Columns -->
                        <syncfusion:GridDateTimeColumn MappingName="ScheduledDate" HeaderText="Scheduled" Width="100"
                                                      Pattern="ShortDate"/>
                        <syncfusion:GridDateTimeColumn MappingName="CompletedDate" HeaderText="Completed" Width="100"
                                                      Pattern="ShortDate"/>

                        <!-- Odometer Reading -->
                        <syncfusion:GridNumericColumn MappingName="OdometerReading" HeaderText="Odometer" Width="100"
                                                     NumberGroupSeparator=","/>

                        <!-- Priority with Visual Indicator -->
                        <syncfusion:GridTemplateColumn MappingName="Priority" HeaderText="Priority" Width="90">
                            <syncfusion:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource FluentDarkWarningBrush}"
                                           CornerRadius="3" Padding="6,2" Margin="1">
                                        <TextBlock Text="{Binding Priority}"
                                                  Foreground="{StaticResource FluentDarkPrimaryTextBrush}"
                                                  FontSize="10" FontWeight="SemiBold"
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </syncfusion:GridTemplateColumn.CellTemplate>
                        </syncfusion:GridTemplateColumn>

                        <!-- Status with Visual Indicator -->
                        <syncfusion:GridTemplateColumn MappingName="Status" HeaderText="Status" Width="100">
                            <syncfusion:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource FluentDarkWarningBrush}"
                                           CornerRadius="12" Padding="8,3" Margin="1">
                                        <TextBlock Text="{Binding Status}"
                                                  Foreground="{StaticResource FluentDarkPrimaryTextBrush}"
                                                  FontSize="10" FontWeight="SemiBold"
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </syncfusion:GridTemplateColumn.CellTemplate>
                        </syncfusion:GridTemplateColumn>

                        <!-- Cost with Currency Formatting -->
                        <syncfusion:GridCurrencyColumn MappingName="Cost" HeaderText="Cost" Width="100"/>

                        <!-- Vendor -->
                        <syncfusion:GridTextColumn MappingName="Vendor" HeaderText="Vendor" Width="120"/>

                        <!-- Technician Assigned -->
                        <syncfusion:GridTextColumn MappingName="AssignedTechnician" HeaderText="Technician" Width="120"/>

                        <!-- Notes with Truncation -->
                        <syncfusion:GridTextColumn MappingName="Notes" HeaderText="Notes" Width="200"
                                                  TextWrapping="Wrap"/>
                    </syncfusion:SfDataGrid.Columns>

                    <!-- Context Menu -->
                    <syncfusion:SfDataGrid.ContextMenu>
                        <ContextMenu Background="{StaticResource FluentDarkSurfaceBrush}"
                                     Foreground="{StaticResource FluentDarkPrimaryTextBrush}"
                                     BorderBrush="{StaticResource FluentDarkBorderBrush}">
                            <MenuItem Header="📝 Edit Maintenance" Command="{Binding EditMaintenanceCommand}"
                                     Background="{StaticResource FluentDarkSurfaceBrush}"
                                     Foreground="{StaticResource FluentDarkPrimaryTextBrush}"/>
                            <MenuItem Header="✅ Mark Complete" Command="{Binding MarkCompleteCommand}"
                                     Background="{StaticResource FluentDarkSurfaceBrush}"
                                     Foreground="{StaticResource FluentDarkPrimaryTextBrush}"/>
                            <MenuItem Header="📋 Duplicate" Command="{Binding DuplicateMaintenanceCommand}"
                                     Background="{StaticResource FluentDarkSurfaceBrush}"
                                     Foreground="{StaticResource FluentDarkPrimaryTextBrush}"/>
                            <Separator Background="{StaticResource FluentDarkBorderBrush}"/>
                            <MenuItem Header="📊 Generate Report" Command="{Binding GenerateItemReportCommand}"
                                     Background="{StaticResource FluentDarkSurfaceBrush}"
                                     Foreground="{StaticResource FluentDarkPrimaryTextBrush}"/>
                            <MenuItem Header="🔔 Set Reminder" Command="{Binding SetReminderCommand}"
                                     Background="{StaticResource FluentDarkSurfaceBrush}"
                                     Foreground="{StaticResource FluentDarkPrimaryTextBrush}"/>
                            <Separator Background="{StaticResource FluentDarkBorderBrush}"/>
                            <MenuItem Header="🗑️ Delete" Command="{Binding DeleteMaintenanceCommand}"
                                     Background="{StaticResource FluentDarkSurfaceBrush}"
                                     Foreground="{StaticResource FluentDarkErrorBrush}"/>
                        </ContextMenu>
                    </syncfusion:SfDataGrid.ContextMenu>
                </syncfusion:SfDataGrid>
            </Grid>
        </ContentControl>

        <!-- Maintenance Analytics (Docked Right) -->
        <ContentControl syncfusion:DockingManager.Header="Maintenance Analytics"
                       syncfusion:DockingManager.State="Dock"
                       syncfusion:DockingManager.SideInDockedMode="Right"
                       syncfusion:DockingManager.DesiredWidthInDockedMode="350"
                       syncfusion:DockingManager.CanSerialize="True">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15"
                         Background="{StaticResource FluentDarkBackgroundBrush}">
                <StackPanel>
                    <TextBlock Text="📈 Analytics"
                              Style="{StaticResource BusBuddyTileHeaderStyle}"
                              Margin="0,0,0,20"/>

                    <!-- Maintenance Trends Chart -->
                    <Border BorderBrush="{StaticResource FluentDarkBorderBrush}"
                          BorderThickness="1" CornerRadius="6" Margin="0,0,0,20"
                          Style="{StaticResource BusBuddyDashboardTileStyle}">
                        <StackPanel Margin="15">
                            <TextBlock Text="Monthly Trends"
                                      Style="{StaticResource BusBuddyTileContentStyle}"
                                      Margin="0,0,0,10"/>
                            <chart:SfChart x:Name="MaintenanceTrendsChart"
                                          Height="200"
                                          Background="Transparent"
                                          Foreground="{StaticResource FluentDarkPrimaryTextBrush}"
                                          MouseLeftButtonDown="Chart_MouseLeftButtonDown"
                                          syncfusionskin:SfSkinManager.VisualStyle="FluentDark">
                                <chart:SfChart.PrimaryAxis>
                                    <chart:CategoryAxis ShowGridLines="False">
                                                      <chart:CategoryAxis.LabelStyle>
                                                          <chart:LabelStyle Foreground="{StaticResource FluentDarkSecondaryTextBrush}"/>
                                                      </chart:CategoryAxis.LabelStyle>
                                    </chart:CategoryAxis>
                                </chart:SfChart.PrimaryAxis>
                                <chart:SfChart.SecondaryAxis>
                                    <chart:NumericalAxis ShowGridLines="True">
                                                       <chart:NumericalAxis.LabelStyle>
                                                           <chart:LabelStyle Foreground="{StaticResource FluentDarkSecondaryTextBrush}"/>
                                                       </chart:NumericalAxis.LabelStyle>
                                    </chart:NumericalAxis>
                                </chart:SfChart.SecondaryAxis>
                                <chart:SfChart.Series>
                                    <chart:ColumnSeries ItemsSource="{Binding MaintenanceTrendsData}"
                                                       XBindingPath="Month"
                                                       YBindingPath="Count"
                                                       Interior="{StaticResource FluentDarkAccentBrush}"/>
                                </chart:SfChart.Series>
                            </chart:SfChart>
                        </StackPanel>
                    </Border>

                    <!-- Cost Distribution Chart -->
                    <Border BorderBrush="{StaticResource FluentDarkBorderBrush}"
                          BorderThickness="1" CornerRadius="6" Margin="0,0,0,20"
                          Style="{StaticResource BusBuddyDashboardTileStyle}">
                        <StackPanel Margin="15">
                            <TextBlock Text="Cost Distribution"
                                      Style="{StaticResource BusBuddyTileContentStyle}"
                                      Margin="0,0,0,10"/>
                            <chart:SfChart x:Name="CostDistributionChart"
                                          Height="180"
                                          Background="Transparent"
                                          Foreground="{StaticResource FluentDarkPrimaryTextBrush}"
                                          MouseLeftButtonDown="Chart_MouseLeftButtonDown"
                                          syncfusionskin:SfSkinManager.VisualStyle="FluentDark">
                                <chart:PieSeries ItemsSource="{Binding CostDistributionData}"
                                               XBindingPath="Category"
                                               YBindingPath="Amount"
                                               ExplodeIndex="0"
                                               ExplodeRadius="5"
                                               Palette="Custom">
                                    <chart:PieSeries.ColorModel>
                                        <chart:ChartColorModel>
                                            <chart:ChartColorModel.CustomBrushes>
                                                <SolidColorBrush Color="{StaticResource FluentDarkAccentColor}"/>
                                                <SolidColorBrush Color="{StaticResource FluentDarkSuccessColor}"/>
                                                <SolidColorBrush Color="{StaticResource FluentDarkWarningColor}"/>
                                                <SolidColorBrush Color="{StaticResource FluentDarkErrorColor}"/>
                                                <SolidColorBrush Color="{StaticResource FluentDarkSecondaryColor}"/>
                                            </chart:ChartColorModel.CustomBrushes>
                                        </chart:ChartColorModel>
                                    </chart:PieSeries.ColorModel>
                                </chart:PieSeries>
                            </chart:SfChart>
                        </StackPanel>
                    </Border>

                    <!-- Performance Metrics -->
                    <Border BorderBrush="{StaticResource FluentDarkBorderBrush}"
                          BorderThickness="1" CornerRadius="6"
                          Style="{StaticResource BusBuddyDashboardTileStyle}">
                        <StackPanel Margin="15">
                            <TextBlock Text="Performance Metrics"
                                      Style="{StaticResource BusBuddyTileContentStyle}"
                                      Margin="0,0,0,15"/>

                            <!-- Average Response Time -->
                            <DockPanel Margin="0,0,0,10">
                                <TextBlock Text="Avg Response Time:" DockPanel.Dock="Left"
                                          Foreground="{StaticResource FluentDarkSecondaryTextBrush}"
                                          FontSize="12"/>
                                <TextBlock Text="{Binding AverageResponseTime}" DockPanel.Dock="Right"
                                          FontWeight="SemiBold" FontSize="12"
                                          Foreground="{StaticResource FluentDarkSuccessBrush}"/>
                            </DockPanel>

                            <!-- Completion Rate -->
                            <DockPanel Margin="0,0,0,10">
                                <TextBlock Text="Completion Rate:" DockPanel.Dock="Left"
                                          Foreground="{StaticResource FluentDarkSecondaryTextBrush}"
                                          FontSize="12"/>
                                <TextBlock Text="{Binding CompletionRate, StringFormat='{}{0:P0}'}" DockPanel.Dock="Right"
                                          FontWeight="SemiBold" FontSize="12"
                                          Foreground="{StaticResource FluentDarkWarningBrush}"/>
                            </DockPanel>

                            <!-- Budget Variance -->
                            <DockPanel Margin="0,0,0,15">
                                <TextBlock Text="Budget Variance:" DockPanel.Dock="Left"
                                          Foreground="{StaticResource FluentDarkSecondaryTextBrush}"
                                          FontSize="12"/>
                                <TextBlock Text="{Binding BudgetVariance, StringFormat='{}{0:P1}'}" DockPanel.Dock="Right"
                                          FontWeight="SemiBold" FontSize="12"
                                          Foreground="{StaticResource FluentDarkAccentBrush}"/>
                            </DockPanel>

                            <!-- Performance Gauge -->
                            <TextBlock Text="Overall Performance:"
                                      Foreground="{StaticResource FluentDarkSecondaryTextBrush}"
                                      FontSize="12" Margin="0,0,0,5"/>
                            <gauge:SfCircularGauge Width="100" Height="100" HorizontalAlignment="Center"
                                                  syncfusionskin:SfSkinManager.VisualStyle="FluentDark"
                                                  Background="Transparent">
                                <gauge:SfCircularGauge.Scales>
                                    <gauge:CircularScale StartAngle="135" SweepAngle="270"
                                                       StartValue="0" EndValue="100"
                                                       Interval="20" MinorTicksPerInterval="1"
                                                       RimStroke="{StaticResource FluentDarkBorderBrush}"
                                                       RimStrokeThickness="8"
                                                       TickStroke="{StaticResource FluentDarkSecondaryTextBrush}"
                                                       TickStrokeThickness="1"
                                                       LabelStroke="{StaticResource FluentDarkSecondaryTextBrush}">
                                        <gauge:CircularScale.Pointers>
                                            <gauge:CircularPointer NeedlePointerType="Triangle"
                                                                 PointerCapStroke="{StaticResource FluentDarkSuccessBrush}"
                                                                 NeedlePointerStroke="{StaticResource FluentDarkSuccessBrush}"
                                                                 Value="{Binding OverallPerformanceScore}"/>
                                        </gauge:CircularScale.Pointers>
                                        <gauge:CircularScale.Ranges>
                                            <gauge:CircularRange StartValue="0" EndValue="40"
                                                               Stroke="{StaticResource FluentDarkErrorBrush}" StrokeThickness="8"/>
                                            <gauge:CircularRange StartValue="40" EndValue="70"
                                                               Stroke="{StaticResource FluentDarkWarningBrush}" StrokeThickness="8"/>
                                            <gauge:CircularRange StartValue="70" EndValue="100"
                                                               Stroke="{StaticResource FluentDarkSuccessBrush}" StrokeThickness="8"/>
                                        </gauge:CircularScale.Ranges>
                                    </gauge:CircularScale>
                                </gauge:SfCircularGauge.Scales>
                                <gauge:SfCircularGauge.Annotations>
                                    <gauge:GaugeAnnotation>
                                        <gauge:GaugeAnnotation.Content>
                                            <TextBlock Text="{Binding OverallPerformanceScore, StringFormat='{}{0:F0}%'}"
                                                      FontSize="14" FontWeight="Bold"
                                                      Foreground="{StaticResource FluentDarkSuccessBrush}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </gauge:GaugeAnnotation.Content>
                                    </gauge:GaugeAnnotation>
                                </gauge:SfCircularGauge.Annotations>
                            </gauge:SfCircularGauge>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </ContentControl>

        <!-- Loading Indicator -->
        <syncfusion:SfBusyIndicator syncfusion:DockingManager.CanSerialize="False"
                                    IsBusy="{Binding IsBusy}"
                                    Style="{StaticResource BusBuddySfBusyIndicatorStyle}"
                                    syncfusionskin:SfSkinManager.VisualStyle="FluentDark"
                                    AnimationType="DoubleCircle"
                                    Foreground="{StaticResource FluentDarkAccentBrush}"
                                    Background="{StaticResource FluentDarkBackgroundBrush}"
                                    Opacity="0.9">
            <syncfusion:SfBusyIndicator.Content>
                <TextBlock Text="Loading maintenance data..."
                          Foreground="{StaticResource FluentDarkPrimaryTextBrush}"
                          FontSize="16"
                          Margin="0,15,0,0"
                          HorizontalAlignment="Center"/>
            </syncfusion:SfBusyIndicator.Content>
        </syncfusion:SfBusyIndicator>
    </syncfusion:DockingManager>
</UserControl>
