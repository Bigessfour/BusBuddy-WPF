<UserControl x:Class="BusBuddy.WPF.Views.Maintenance.MaintenanceTrackingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
             xmlns:gauge="clr-namespace:Syncfusion.UI.Xaml.Gauges;assembly=Syncfusion.SfGauge.WPF"
             xmlns:viewModels="clr-namespace:BusBuddy.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance viewModels:MaintenanceTrackingViewModel}"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Placeholder converters for demonstration - implement these in your converters folder -->
        <SolidColorBrush x:Key="HighPriorityBrush" Color="#E74C3C"/>
        <SolidColorBrush x:Key="MediumPriorityBrush" Color="#F39C12"/>
        <SolidColorBrush x:Key="LowPriorityBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="PendingStatusBrush" Color="#E67E22"/>
        <SolidColorBrush x:Key="CompletedStatusBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="OverdueStatusBrush" Color="#E74C3C"/>
        
        <Style x:Key="MaintenanceActionButton" TargetType="syncfusion:ButtonAdv">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="MaintenanceHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        <Style x:Key="MetricTileStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" Direction="270" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Enhanced Maintenance Tracking with Syncfusion DockingManager -->
    <syncfusion:DockingManager UseDocumentContainer="True" PersistState="False" ContainerMode="TDI">
        
        <!-- Maintenance Overview (Document) -->
        <ContentControl syncfusion:DockingManager.Header="Maintenance Overview" 
                       syncfusion:DockingManager.State="Document"
                       syncfusion:DockingManager.CanSerialize="True">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Enhanced Header -->
                <DockPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ”§ Maintenance Tracking" Style="{StaticResource MaintenanceHeaderStyle}" DockPanel.Dock="Left"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <syncfusion:ButtonAdv x:Name="AddMaintenanceButton"
                                            Label="âž• New Maintenance" 
                                            Command="{Binding AddCommand}" 
                                            Style="{StaticResource MaintenanceActionButton}"
                                            Background="#27AE60"
                                            Foreground="White"
                                            Click="AddMaintenanceButton_Click"/>
                        <syncfusion:ButtonAdv x:Name="GenerateReportButton"
                                            Label="ðŸ“Š Generate Report" 
                                            Command="{Binding ReportCommand}" 
                                            Style="{StaticResource MaintenanceActionButton}"
                                            Background="#3498DB"
                                            Foreground="White"
                                            Click="GenerateReportButton_Click"/>
                        <syncfusion:ButtonAdv x:Name="RefreshMaintenanceButton"
                                            Label="ðŸ”„ Refresh" 
                                            Style="{StaticResource MaintenanceActionButton}"
                                            Background="#9B59B6"
                                            Foreground="White"
                                            Click="RefreshMaintenanceButton_Click"/>
                    </StackPanel>
                </DockPanel>

                <!-- Enhanced Maintenance Metrics Dashboard -->
                <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,20">
                    <!-- Pending Maintenance Tile -->
                    <Border x:Name="PendingMaintenanceTile" 
                           Style="{StaticResource MetricTileStyle}"
                           MouseLeftButtonDown="MaintenanceTile_MouseLeftButtonDown">
                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="â³ Pending" FontSize="14" FontWeight="SemiBold" 
                                          Foreground="#E67E22" DockPanel.Dock="Left"/>
                                <Ellipse Width="10" Height="10" Fill="#E67E22" DockPanel.Dock="Right" 
                                        VerticalAlignment="Center"/>
                            </DockPanel>
                            <TextBlock Text="{Binding PendingMaintenanceCount}" 
                                      FontSize="28" FontWeight="Bold" 
                                      Foreground="#E67E22" 
                                      HorizontalAlignment="Center" 
                                      Margin="0,10,0,5"/>
                            <TextBlock Text="Items" FontSize="12" 
                                      Foreground="#7F8C8D" 
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Overdue Maintenance Tile -->
                    <Border x:Name="OverdueMaintenanceTile" 
                           Style="{StaticResource MetricTileStyle}"
                           MouseLeftButtonDown="MaintenanceTile_MouseLeftButtonDown">
                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="ðŸš¨ Overdue" FontSize="14" FontWeight="SemiBold" 
                                          Foreground="#E74C3C" DockPanel.Dock="Left"/>
                                <Ellipse Width="10" Height="10" Fill="#E74C3C" DockPanel.Dock="Right" 
                                        VerticalAlignment="Center"/>
                            </DockPanel>
                            <TextBlock Text="{Binding OverdueMaintenanceCount}" 
                                      FontSize="28" FontWeight="Bold" 
                                      Foreground="#E74C3C" 
                                      HorizontalAlignment="Center" 
                                      Margin="0,10,0,5"/>
                            <TextBlock Text="Critical" FontSize="12" 
                                      Foreground="#7F8C8D" 
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Completed This Month Tile -->
                    <Border x:Name="CompletedMaintenanceTile" 
                           Style="{StaticResource MetricTileStyle}"
                           MouseLeftButtonDown="MaintenanceTile_MouseLeftButtonDown">
                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="âœ… Completed" FontSize="14" FontWeight="SemiBold" 
                                          Foreground="#27AE60" DockPanel.Dock="Left"/>
                                <Ellipse Width="10" Height="10" Fill="#27AE60" DockPanel.Dock="Right" 
                                        VerticalAlignment="Center"/>
                            </DockPanel>
                            <TextBlock Text="{Binding CompletedMaintenanceCount}" 
                                      FontSize="28" FontWeight="Bold" 
                                      Foreground="#27AE60" 
                                      HorizontalAlignment="Center" 
                                      Margin="0,10,0,5"/>
                            <TextBlock Text="This Month" FontSize="12" 
                                      Foreground="#7F8C8D" 
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Cost Analysis Tile with Gauge -->
                    <Border x:Name="CostAnalysisTile" 
                           Style="{StaticResource MetricTileStyle}"
                           MouseLeftButtonDown="MaintenanceTile_MouseLeftButtonDown">
                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="ðŸ’° Monthly Cost" FontSize="14" FontWeight="SemiBold" 
                                          Foreground="#8E44AD" DockPanel.Dock="Left"/>
                                <Ellipse Width="10" Height="10" Fill="#8E44AD" DockPanel.Dock="Right" 
                                        VerticalAlignment="Center"/>
                            </DockPanel>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding MonthlyMaintenanceCost, StringFormat='{}{0:C0}'}" 
                                              FontSize="18" FontWeight="Bold" 
                                              Foreground="#8E44AD"/>
                                    <TextBlock Text="Budget Usage:" FontSize="10" 
                                              Foreground="#7F8C8D" Margin="0,5,0,0"/>
                                    <ProgressBar Value="{Binding BudgetUsagePercentage}" 
                                                Height="8" 
                                                Background="#ECF0F1"
                                                Foreground="#8E44AD"
                                                Minimum="0" Maximum="100"/>
                                </StackPanel>
                                <gauge:SfCircularGauge Grid.Column="1" Width="50" Height="50" Margin="5,0,0,0">
                                    <gauge:SfCircularGauge.Scales>
                                        <gauge:CircularScale StartAngle="135" SweepAngle="270" 
                                                           StartValue="0" EndValue="100"
                                                           ShowTicks="False" ShowLabels="False"
                                                           RimStroke="#ECF0F1" RimStrokeThickness="4">
                                            <gauge:CircularScale.Pointers>
                                                <gauge:CircularPointer NeedlePointerType="Triangle" 
                                                                     PointerCapStroke="#8E44AD"
                                                                     NeedlePointerStroke="#8E44AD"
                                                                     Value="{Binding BudgetUsagePercentage}"/>
                                            </gauge:CircularScale.Pointers>
                                            <gauge:CircularScale.Ranges>
                                                <gauge:CircularRange StartValue="0" EndValue="100" 
                                                                   Stroke="#8E44AD" StrokeThickness="4"/>
                                            </gauge:CircularScale.Ranges>
                                        </gauge:CircularScale>
                                    </gauge:SfCircularGauge.Scales>
                                </gauge:SfCircularGauge>
                            </Grid>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Enhanced Main Maintenance Grid -->
                <syncfusion:SfDataGrid x:Name="MaintenanceGrid"
                                      Grid.Row="2"
                                      ItemsSource="{Binding MaintenanceRecords}"
                                      SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                                      AutoGenerateColumns="False"
                                      AllowResizingColumns="True"
                                      AllowSorting="True"
                                      AllowFiltering="True"
                                      AllowGrouping="True"
                                      ShowGroupDropArea="True"
                                      ColumnSizer="Star"
                                      SelectionMode="Single"
                                      NavigationMode="Row"
                                      AllowEditing="False"
                                      ShowRowHeader="False"
                                      BorderThickness="1"
                                      BorderBrush="#E0E0E0"
                                      GridLinesVisibility="Both"
                                      SelectionChanged="MaintenanceGrid_SelectionChanged"
                                      CellTapped="MaintenanceGrid_CellTapped">
                    <syncfusion:SfDataGrid.Columns>
                        <!-- Enhanced Bus Column with Visual Indicator -->
                        <syncfusion:GridTemplateColumn MappingName="BusNumber" HeaderText="Bus" Width="100">
                            <syncfusion:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#E3F2FD" CornerRadius="4" Padding="6,3" Margin="2">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸšŒ" FontSize="12" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding BusNumber}" 
                                                      FontWeight="SemiBold" FontSize="11" 
                                                      Foreground="#1976D2" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </syncfusion:GridTemplateColumn.CellTemplate>
                        </syncfusion:GridTemplateColumn>

                        <!-- Maintenance Type with Icon -->
                        <syncfusion:GridTemplateColumn MappingName="MaintenanceType" HeaderText="Type" Width="140">
                            <syncfusion:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ”§" FontSize="12" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding MaintenanceType}" 
                                                  FontSize="11" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </syncfusion:GridTemplateColumn.CellTemplate>
                        </syncfusion:GridTemplateColumn>

                        <!-- Enhanced Date Columns -->
                        <syncfusion:GridDateTimeColumn MappingName="ScheduledDate" HeaderText="Scheduled" Width="100" 
                                                      Pattern="ShortDate"/>
                        <syncfusion:GridDateTimeColumn MappingName="CompletedDate" HeaderText="Completed" Width="100" 
                                                      Pattern="ShortDate"/>

                        <!-- Odometer Reading -->
                        <syncfusion:GridNumericColumn MappingName="OdometerReading" HeaderText="Odometer" Width="100"
                                                     NumberGroupSeparator=","/>

                        <!-- Priority with Visual Indicator -->
                        <syncfusion:GridTemplateColumn MappingName="Priority" HeaderText="Priority" Width="90">
                            <syncfusion:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource MediumPriorityBrush}" 
                                           CornerRadius="3" Padding="6,2" Margin="1">
                                        <TextBlock Text="{Binding Priority}" 
                                                  Foreground="White" FontSize="10" FontWeight="SemiBold" 
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </syncfusion:GridTemplateColumn.CellTemplate>
                        </syncfusion:GridTemplateColumn>

                        <!-- Status with Visual Indicator -->
                        <syncfusion:GridTemplateColumn MappingName="Status" HeaderText="Status" Width="100">
                            <syncfusion:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource PendingStatusBrush}" 
                                           CornerRadius="12" Padding="8,3" Margin="1">
                                        <TextBlock Text="{Binding Status}" 
                                                  Foreground="White" FontSize="10" FontWeight="SemiBold" 
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </syncfusion:GridTemplateColumn.CellTemplate>
                        </syncfusion:GridTemplateColumn>

                        <!-- Cost with Currency Formatting -->
                        <syncfusion:GridCurrencyColumn MappingName="Cost" HeaderText="Cost" Width="100"/>

                        <!-- Vendor -->
                        <syncfusion:GridTextColumn MappingName="Vendor" HeaderText="Vendor" Width="120"/>

                        <!-- Technician Assigned -->
                        <syncfusion:GridTextColumn MappingName="AssignedTechnician" HeaderText="Technician" Width="120"/>

                        <!-- Notes with Truncation -->
                        <syncfusion:GridTextColumn MappingName="Notes" HeaderText="Notes" Width="200"
                                                  TextWrapping="Wrap"/>
                    </syncfusion:SfDataGrid.Columns>

                    <!-- Context Menu -->
                    <syncfusion:SfDataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="ðŸ“ Edit Maintenance" Command="{Binding EditMaintenanceCommand}"/>
                            <MenuItem Header="âœ… Mark Complete" Command="{Binding MarkCompleteCommand}"/>
                            <MenuItem Header="ðŸ“‹ Duplicate" Command="{Binding DuplicateMaintenanceCommand}"/>
                            <Separator/>
                            <MenuItem Header="ðŸ“Š Generate Report" Command="{Binding GenerateItemReportCommand}"/>
                            <MenuItem Header="ðŸ”” Set Reminder" Command="{Binding SetReminderCommand}"/>
                            <Separator/>
                            <MenuItem Header="ðŸ—‘ï¸ Delete" Command="{Binding DeleteMaintenanceCommand}" Foreground="Red"/>
                        </ContextMenu>
                    </syncfusion:SfDataGrid.ContextMenu>
                </syncfusion:SfDataGrid>
            </Grid>
        </ContentControl>

        <!-- Maintenance Analytics (Docked Right) -->
        <ContentControl syncfusion:DockingManager.Header="Maintenance Analytics" 
                       syncfusion:DockingManager.State="Dock"
                       syncfusion:DockingManager.SideInDockedMode="Right"
                       syncfusion:DockingManager.DesiredWidthInDockedMode="350"
                       syncfusion:DockingManager.CanSerialize="True">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
                <StackPanel>
                    <TextBlock Text="ðŸ“ˆ Analytics" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

                    <!-- Maintenance Trends Chart -->
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Margin="0,0,0,20">
                        <StackPanel Margin="15">
                            <TextBlock Text="Monthly Trends" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                            <chart:SfChart x:Name="MaintenanceTrendsChart" 
                                          Height="200"
                                          MouseLeftButtonDown="Chart_MouseLeftButtonDown">
                                <chart:SfChart.PrimaryAxis>
                                    <chart:CategoryAxis ShowGridLines="False"/>
                                </chart:SfChart.PrimaryAxis>
                                <chart:SfChart.SecondaryAxis>
                                    <chart:NumericalAxis ShowGridLines="True"/>
                                </chart:SfChart.SecondaryAxis>
                                <chart:SfChart.Series>
                                    <chart:ColumnSeries ItemsSource="{Binding MaintenanceTrendsData}" 
                                                       XBindingPath="Month" 
                                                       YBindingPath="Count"
                                                       Interior="#3498DB"/>
                                </chart:SfChart.Series>
                            </chart:SfChart>
                        </StackPanel>
                    </Border>

                    <!-- Cost Distribution Chart -->
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Margin="0,0,0,20">
                        <StackPanel Margin="15">
                            <TextBlock Text="Cost Distribution" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                            <chart:SfChart x:Name="CostDistributionChart" 
                                          Height="180"
                                          MouseLeftButtonDown="Chart_MouseLeftButtonDown">
                                <chart:PieSeries ItemsSource="{Binding CostDistributionData}" 
                                               XBindingPath="Category" 
                                               YBindingPath="Amount"
                                               ExplodeIndex="0"
                                               ExplodeRadius="5"/>
                            </chart:SfChart>
                        </StackPanel>
                    </Border>

                    <!-- Performance Metrics -->
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6">
                        <StackPanel Margin="15">
                            <TextBlock Text="Performance Metrics" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                            
                            <!-- Average Response Time -->
                            <DockPanel Margin="0,0,0,10">
                                <TextBlock Text="Avg Response Time:" DockPanel.Dock="Left" FontSize="12"/>
                                <TextBlock Text="{Binding AverageResponseTime}" DockPanel.Dock="Right" 
                                          FontWeight="SemiBold" FontSize="12" Foreground="#27AE60"/>
                            </DockPanel>
                            
                            <!-- Completion Rate -->
                            <DockPanel Margin="0,0,0,10">
                                <TextBlock Text="Completion Rate:" DockPanel.Dock="Left" FontSize="12"/>
                                <TextBlock Text="{Binding CompletionRate, StringFormat='{}{0:P0}'}" DockPanel.Dock="Right" 
                                          FontWeight="SemiBold" FontSize="12" Foreground="#E67E22"/>
                            </DockPanel>
                            
                            <!-- Budget Variance -->
                            <DockPanel Margin="0,0,0,15">
                                <TextBlock Text="Budget Variance:" DockPanel.Dock="Left" FontSize="12"/>
                                <TextBlock Text="{Binding BudgetVariance, StringFormat='{}{0:P1}'}" DockPanel.Dock="Right" 
                                          FontWeight="SemiBold" FontSize="12" Foreground="#8E44AD"/>
                            </DockPanel>
                            
                            <!-- Performance Gauge -->
                            <TextBlock Text="Overall Performance:" FontSize="12" Margin="0,0,0,5"/>
                            <gauge:SfCircularGauge Width="100" Height="100" HorizontalAlignment="Center">
                                <gauge:SfCircularGauge.Scales>
                                    <gauge:CircularScale StartAngle="135" SweepAngle="270" 
                                                       StartValue="0" EndValue="100"
                                                       Interval="20" MinorTicksPerInterval="1"
                                                       RimStroke="#E0E0E0" RimStrokeThickness="8"
                                                       TickStroke="#666666" TickStrokeThickness="1"
                                                       LabelStroke="#333333">
                                        <gauge:CircularScale.Pointers>
                                            <gauge:CircularPointer NeedlePointerType="Triangle" 
                                                                 PointerCapStroke="#27AE60"
                                                                 NeedlePointerStroke="#27AE60"
                                                                 Value="{Binding OverallPerformanceScore}"/>
                                        </gauge:CircularScale.Pointers>
                                        <gauge:CircularScale.Ranges>
                                            <gauge:CircularRange StartValue="0" EndValue="40" 
                                                               Stroke="#E74C3C" StrokeThickness="8"/>
                                            <gauge:CircularRange StartValue="40" EndValue="70" 
                                                               Stroke="#F39C12" StrokeThickness="8"/>
                                            <gauge:CircularRange StartValue="70" EndValue="100" 
                                                               Stroke="#27AE60" StrokeThickness="8"/>
                                        </gauge:CircularScale.Ranges>
                                    </gauge:CircularScale>
                                </gauge:SfCircularGauge.Scales>
                                <gauge:SfCircularGauge.Annotations>
                                    <gauge:GaugeAnnotation>
                                        <gauge:GaugeAnnotation.Content>
                                            <TextBlock Text="{Binding OverallPerformanceScore, StringFormat='{}{0:F0}%'}" 
                                                      FontSize="14" FontWeight="Bold" 
                                                      Foreground="#27AE60"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </gauge:GaugeAnnotation.Content>
                                    </gauge:GaugeAnnotation>
                                </gauge:SfCircularGauge.Annotations>
                            </gauge:SfCircularGauge>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </ContentControl>

        <!-- Loading Indicator -->
        <Border syncfusion:DockingManager.CanSerialize="False"
                Background="#80000000" 
                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <syncfusion:SfBusyIndicator IsBusy="True" 
                                           AnimationType="DoubleCircle" 
                                           Foreground="White"
                                           Height="60" 
                                           Width="60"/>
                <TextBlock Text="Loading maintenance data..." 
                           Foreground="White" 
                           FontSize="16" 
                           Margin="0,15,0,0" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </syncfusion:DockingManager>
</UserControl>
