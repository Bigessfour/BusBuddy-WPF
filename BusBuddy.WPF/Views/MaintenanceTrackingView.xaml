<UserControl x:Class="BusBuddy.WPF.Views.MaintenanceTrackingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Add" Command="{Binding AddCommand}" Margin="0,0,10,0"/>
            <Button Content="Edit" Command="{Binding EditCommand}" Margin="0,0,10,0"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}"/>
        </StackPanel>
        <syncfusion:SfDataGrid x:Name="MaintenanceGrid"
                               ItemsSource="{Binding MaintenanceRecords}"
                               SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                               AutoGenerateColumns="False"
                               Margin="0,40,0,0">
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridComboBoxColumn MappingName="BusNumber" HeaderText="Bus" ItemsSource="{Binding AvailableBuses}" />
                <syncfusion:GridTextColumn MappingName="Description" HeaderText="Description"/>
                <syncfusion:GridDateTimeColumn MappingName="ScheduledDate" HeaderText="Scheduled"/>
                <syncfusion:GridDateTimeColumn MappingName="CompletedDate" HeaderText="Completed"/>
                <syncfusion:GridTextColumn MappingName="Status" HeaderText="Status"/>
            </syncfusion:SfDataGrid.Columns>
        </syncfusion:SfDataGrid>
    </Grid>
</UserControl>
