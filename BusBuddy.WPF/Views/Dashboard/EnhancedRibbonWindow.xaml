<syncfusion:RibbonWindow x:Class="BusBuddy.WPF.Views.Dashboard.EnhancedRibbonWindow"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                         xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
                         xmlns:dashboard="clr-namespace:BusBuddy.WPF.Views.Dashboard"
                         xmlns:viewModels="clr-namespace:BusBuddy.WPF.ViewModels"
                         mc:Ignorable="d"
                         Title="Bus Buddy - Enhanced Interface"
                         Height="900" Width="1400"
                         WindowStartupLocation="CenterScreen"
                         WindowState="Maximized"
                         Background="{StaticResource ContentBackground}"
                         Foreground="{StaticResource Foreground}"
                         syncfusionskin:SfSkinManager.VisualStyle="FluentDark"
                         d:DataContext="{d:DesignInstance viewModels:DashboardViewModel}">

    <syncfusion:RibbonWindow.Resources>
        <!-- Button Icons as Text (Simple Implementation) -->
        <Style x:Key="RibbonIconStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
        </Style>

        <!-- Style for Ribbon Button -->
        <Style x:Key="RibbonButtonStyle" TargetType="syncfusion:RibbonButton">
            <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
        </Style>

        <!-- Style for SplitButton -->
        <Style x:Key="RibbonSplitButtonStyle" TargetType="syncfusion:SplitButton">
            <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
        </Style>

        <!-- Style for DropDownButton -->
        <Style x:Key="RibbonDropDownButtonStyle" TargetType="syncfusion:DropDownButton">
            <Setter Property="syncfusionskin:SfSkinManager.VisualStyle" Value="FluentDark"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
        </Style>

        <!-- Style for DropDownMenuItem -->
        <Style x:Key="DropDownMenuItemStyle" TargetType="syncfusion:DropDownMenuItem">
            <Setter Property="Background" Value="{StaticResource ContentBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
        </Style>
    </syncfusion:RibbonWindow.Resources>

    <Grid Background="{StaticResource ContentBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Minimal SfRibbon Implementation -->
        <syncfusion:Ribbon x:Name="MainRibbon"
                          Grid.Row="0"
                          VerticalAlignment="Top"
                          syncfusionskin:SfSkinManager.VisualStyle="FluentDark"
                          Background="{StaticResource PrimaryBrush}"
                          Foreground="{StaticResource Foreground}">

            <!-- Quick Access Toolbar -->
            <syncfusion:Ribbon.QuickAccessToolBar>
                <syncfusion:QuickAccessToolBar syncfusionskin:SfSkinManager.VisualStyle="FluentDark">
                    <syncfusion:RibbonButton SizeForm="ExtraSmall"
                                           Label="Save"
                                           ToolTip="Save Current Data"
                                           Style="{StaticResource RibbonButtonStyle}"/>
                    <syncfusion:RibbonButton SizeForm="ExtraSmall"
                                           Label="Refresh"
                                           ToolTip="Refresh Dashboard Data"
                                           Style="{StaticResource RibbonButtonStyle}"/>
                    <syncfusion:RibbonButton SizeForm="ExtraSmall"
                                           Label="Settings"
                                           ToolTip="Application Settings"
                                           Style="{StaticResource RibbonButtonStyle}"/>
                </syncfusion:QuickAccessToolBar>
            </syncfusion:Ribbon.QuickAccessToolBar>

            <!-- HOME Tab — Core Operations -->
            <syncfusion:RibbonTab Caption="HOME" IsChecked="True" syncfusionskin:SfSkinManager.VisualStyle="FluentDark">

                <!-- Dashboard Group -->
                <syncfusion:RibbonBar Name="DashboardGroup" Header="Dashboard" Width="200" syncfusionskin:SfSkinManager.VisualStyle="FluentDark">
                    <syncfusion:RibbonButton SizeForm="Large"
                                           Label="Overview"
                                           ToolTip="Switch to Dashboard Overview"
                                           Click="OverviewButton_Click"
                                           Style="{StaticResource RibbonButtonStyle}">
                        <syncfusion:RibbonButton.Content>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="📊" Style="{StaticResource RibbonIconStyle}"/>
                                <TextBlock Text="Overview" FontSize="10" HorizontalAlignment="Center" Foreground="{StaticResource Foreground}"/>
                            </StackPanel>
                        </syncfusion:RibbonButton.Content>
                    </syncfusion:RibbonButton>

                    <syncfusion:RibbonButton SizeForm="Large"
                                           Label="Enhanced View"
                                           ToolTip="Switch to Enhanced Dashboard with Docking"
                                           Click="EnhancedViewButton_Click"
                                           Style="{StaticResource RibbonButtonStyle}">
                        <syncfusion:RibbonButton.Content>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="🖥️" Style="{StaticResource RibbonIconStyle}"/>
                                <TextBlock Text="Enhanced" FontSize="10" HorizontalAlignment="Center" Foreground="{StaticResource Foreground}"/>
                            </StackPanel>
                        </syncfusion:RibbonButton.Content>
                    </syncfusion:RibbonButton>

                    <syncfusion:RibbonButton SizeForm="Large"
                                           Label="Simple View"
                                           ToolTip="Switch to Simple Dashboard with Tabs"
                                           Click="SimpleViewButton_Click"
                                           Style="{StaticResource RibbonButtonStyle}">
                        <syncfusion:RibbonButton.Content>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="📱" Style="{StaticResource RibbonIconStyle}"/>
                                <TextBlock Text="Simple" FontSize="10" HorizontalAlignment="Center" Foreground="{StaticResource Foreground}"/>
                            </StackPanel>
                        </syncfusion:RibbonButton.Content>
                    </syncfusion:RibbonButton>
                </syncfusion:RibbonBar>

                <!-- Data Management Group -->
                <syncfusion:RibbonBar Name="DataGroup" Header="Data" Width="300" syncfusionskin:SfSkinManager.VisualStyle="FluentDark">
                    <syncfusion:RibbonButton Label="Refresh All"
                                           SizeForm="Large"
                                           ToolTip="Refresh All Dashboard Data"
                                           Click="RefreshAllButton_Click"
                                           Style="{StaticResource RibbonButtonStyle}">
                        <syncfusion:RibbonButton.Content>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="🔄" Style="{StaticResource RibbonIconStyle}"/>
                                <TextBlock Text="Refresh All" FontSize="10" HorizontalAlignment="Center" Foreground="{StaticResource Foreground}"/>
                            </StackPanel>
                        </syncfusion:RibbonButton.Content>
                    </syncfusion:RibbonButton>

                    <syncfusion:SplitButton Label="Export" SizeForm="Small" ToolTip="Export Data" Style="{StaticResource RibbonSplitButtonStyle}">
                        <syncfusion:DropDownMenuItem Header="📄 Export to PDF" Style="{StaticResource DropDownMenuItemStyle}"/>
                        <syncfusion:DropDownMenuItem Header="📊 Export to Excel" Style="{StaticResource DropDownMenuItemStyle}"/>
                        <syncfusion:DropDownMenuItem Header="📝 Export to CSV" Style="{StaticResource DropDownMenuItemStyle}"/>
                    </syncfusion:SplitButton>

                    <syncfusion:RibbonButton Label="Import" SizeForm="Small" ToolTip="Import Data" Style="{StaticResource RibbonButtonStyle}"/>
                    <syncfusion:RibbonButton Label="Backup" SizeForm="Small" ToolTip="Backup Database" Style="{StaticResource RibbonButtonStyle}"/>
                </syncfusion:RibbonBar>

                <!-- Layout Group -->
                <syncfusion:RibbonBar Name="LayoutGroup" Header="Layout" Width="150" syncfusionskin:SfSkinManager.VisualStyle="FluentDark">
                    <syncfusion:RibbonButton Label="Reset Layout"
                                           SizeForm="Large"
                                           ToolTip="Reset Dashboard Layout to Default"
                                           Click="ResetLayoutButton_Click"
                                           Style="{StaticResource RibbonButtonStyle}">
                        <syncfusion:RibbonButton.Content>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="🏠" Style="{StaticResource RibbonIconStyle}"/>
                                <TextBlock Text="Reset" FontSize="10" HorizontalAlignment="Center" Foreground="{StaticResource Foreground}"/>
                            </StackPanel>
                        </syncfusion:RibbonButton.Content>
                    </syncfusion:RibbonButton>

                    <syncfusion:RibbonButton Label="Save Layout" SizeForm="Small" ToolTip="Save Current Layout" Style="{StaticResource RibbonButtonStyle}"/>
                    <syncfusion:RibbonButton Label="Load Layout" SizeForm="Small" ToolTip="Load Saved Layout" Style="{StaticResource RibbonButtonStyle}"/>
                </syncfusion:RibbonBar>

            </syncfusion:RibbonTab>

            <!-- OPERATIONS Tab — Fleet Management -->
            <syncfusion:RibbonTab Caption="OPERATIONS" IsChecked="False" syncfusionskin:SfSkinManager.VisualStyle="FluentDark">

                <!-- Fleet Group -->
                <syncfusion:RibbonBar Name="FleetGroup" Header="Fleet Management" Width="350" syncfusionskin:SfSkinManager.VisualStyle="FluentDark">
                    <syncfusion:RibbonButton Label="Bus Management"
                                           SizeForm="Large"
                                           ToolTip="Manage Bus Fleet"
                                           Click="BusManagementButton_Click"
                                           Style="{StaticResource RibbonButtonStyle}">
                        <syncfusion:RibbonButton.Content>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="🚌" Style="{StaticResource RibbonIconStyle}"/>
                                <TextBlock Text="Buses" FontSize="10" HorizontalAlignment="Center" Foreground="{StaticResource Foreground}"/>
                            </StackPanel>
                        </syncfusion:RibbonButton.Content>
                    </syncfusion:RibbonButton>

                    <syncfusion:RibbonButton Label="Driver Management"
                                           SizeForm="Large"
                                           ToolTip="Manage Drivers"
                                           Click="DriverManagementButton_Click"
                                           Style="{StaticResource RibbonButtonStyle}">
                        <syncfusion:RibbonButton.Content>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="👨‍💼" Style="{StaticResource RibbonIconStyle}"/>
                                <TextBlock Text="Drivers" FontSize="10" HorizontalAlignment="Center" Foreground="{StaticResource Foreground}"/>
                            </StackPanel>
                        </syncfusion:RibbonButton.Content>
                    </syncfusion:RibbonButton>

                    <syncfusion:RibbonButton Label="Route Management"
                                           SizeForm="Large"
                                           ToolTip="Manage Routes"
                                           Click="RouteManagementButton_Click"
                                           Style="{StaticResource RibbonButtonStyle}">
                        <syncfusion:RibbonButton.Content>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="🗺️" Style="{StaticResource RibbonIconStyle}"/>
                                <TextBlock Text="Routes" FontSize="10" HorizontalAlignment="Center" Foreground="{StaticResource Foreground}"/>
                            </StackPanel>
                        </syncfusion:RibbonButton.Content>
                    </syncfusion:RibbonButton>

                    <syncfusion:RibbonButton Label="Schedule" SizeForm="Small" ToolTip="Manage Schedules" Style="{StaticResource RibbonButtonStyle}"/>
                    <syncfusion:RibbonButton Label="Students" SizeForm="Small" ToolTip="Manage Students" Style="{StaticResource RibbonButtonStyle}"/>
                </syncfusion:RibbonBar>

                <!-- Maintenance Group -->
                <syncfusion:RibbonBar Name="MaintenanceGroup" Header="Maintenance" Width="200" syncfusionskin:SfSkinManager.VisualStyle="FluentDark">
                    <syncfusion:RibbonButton Label="Maintenance"
                                           SizeForm="Large"
                                           ToolTip="Maintenance Tracking"
                                           Click="MaintenanceButton_Click"
                                           Style="{StaticResource RibbonButtonStyle}">
                        <syncfusion:RibbonButton.Content>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="🔧" Style="{StaticResource RibbonIconStyle}"/>
                                <TextBlock Text="Maintenance" FontSize="10" HorizontalAlignment="Center" Foreground="{StaticResource Foreground}"/>
                            </StackPanel>
                        </syncfusion:RibbonButton.Content>
                    </syncfusion:RibbonButton>

                    <syncfusion:RibbonButton Label="Fuel" SizeForm="Small" ToolTip="Fuel Management" Style="{StaticResource RibbonButtonStyle}"/>
                    <syncfusion:RibbonButton Label="Inspection" SizeForm="Small" ToolTip="Vehicle Inspection" Style="{StaticResource RibbonButtonStyle}"/>
                </syncfusion:RibbonBar>

                <!-- Reports Group -->
                <syncfusion:RibbonBar Name="ReportsGroup" Header="Reports" Width="150" syncfusionskin:SfSkinManager.VisualStyle="FluentDark">
                    <syncfusion:DropDownButton Label="Generate Reports" SizeForm="Large" ToolTip="Generate Various Reports" Style="{StaticResource RibbonDropDownButtonStyle}">
                        <syncfusion:DropDownMenuItem Header="📊 Fleet Report" Style="{StaticResource DropDownMenuItemStyle}"/>
                        <syncfusion:DropDownMenuItem Header="👨‍💼 Driver Report" Style="{StaticResource DropDownMenuItemStyle}"/>
                        <syncfusion:DropDownMenuItem Header="🗺️ Route Report" Style="{StaticResource DropDownMenuItemStyle}"/>
                        <syncfusion:DropDownMenuItem Header="🔧 Maintenance Report" Style="{StaticResource DropDownMenuItemStyle}"/>
                        <syncfusion:DropDownMenuItem Header="⛽ Fuel Report" Style="{StaticResource DropDownMenuItemStyle}"/>
                    </syncfusion:DropDownButton>

                    <syncfusion:RibbonButton Label="Analytics" SizeForm="Small" ToolTip="View Analytics" Style="{StaticResource RibbonButtonStyle}"/>
                </syncfusion:RibbonBar>

            </syncfusion:RibbonTab>

            <!-- BackStage for File Operations -->
            <syncfusion:Ribbon.BackStage>
                <syncfusion:Backstage syncfusionskin:SfSkinManager.VisualStyle="FluentDark" Background="{StaticResource ContentBackground}">
                    <syncfusion:BackstageTabItem Header="Settings" IsSelected="True" Background="{StaticResource ContentBackground}" Foreground="{StaticResource Foreground}">
                        <Grid Margin="20" Background="{StaticResource ContentBackground}">
                            <StackPanel>
                                <TextBlock Text="Application Settings" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20" Foreground="{StaticResource Foreground}"/>
                                <CheckBox Content="Enable auto-refresh (5 seconds)" IsChecked="True" Margin="0,0,0,10" Foreground="{StaticResource Foreground}"/>
                                <CheckBox Content="Save layout on exit" IsChecked="True" Margin="0,0,0,10" Foreground="{StaticResource Foreground}"/>
                                <CheckBox Content="Show performance metrics" IsChecked="True" Margin="0,0,0,10" Foreground="{StaticResource Foreground}"/>
                                <CheckBox Content="Enable accessibility features" IsChecked="False" Margin="0,0,0,20" Foreground="{StaticResource Foreground}"/>
                                <Button Content="Apply Settings" Width="120" HorizontalAlignment="Left" Background="{StaticResource PrimaryBrush}" Foreground="{StaticResource Foreground}"/>
                            </StackPanel>
                        </Grid>
                    </syncfusion:BackstageTabItem>

                    <syncfusion:BackstageTabItem Header="About" Background="{StaticResource ContentBackground}" Foreground="{StaticResource Foreground}">
                        <Grid Margin="20" Background="{StaticResource ContentBackground}">
                            <StackPanel>
                                <TextBlock Text="Bus Buddy" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" Foreground="{StaticResource Foreground}"/>
                                <TextBlock Text="Transportation Management System" FontSize="16" Margin="0,0,0,10" Foreground="{StaticResource Foreground}"/>
                                <TextBlock Text="Version 4.0 - Enhanced UI" FontSize="14" Margin="0,0,0,20" Foreground="{StaticResource Foreground}"/>
                                <TextBlock Text="Features:" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="{StaticResource Foreground}"/>
                                <TextBlock Text="• Professional IDE-style interface with DockingManager" Margin="20,0,0,5" Foreground="{StaticResource Foreground}"/>
                                <TextBlock Text="• Custom tile-based dashboard" Margin="20,0,0,5" Foreground="{StaticResource Foreground}"/>
                                <TextBlock Text="• Real-time data updates (5-second refresh)" Margin="20,0,0,5" Foreground="{StaticResource Foreground}"/>
                                <TextBlock Text="• Layout persistence" Margin="20,0,0,5" Foreground="{StaticResource Foreground}"/>
                                <TextBlock Text="• Comprehensive fleet management" Margin="20,0,0,5" Foreground="{StaticResource Foreground}"/>
                            </StackPanel>
                        </Grid>
                    </syncfusion:BackstageTabItem>
                </syncfusion:Backstage>
            </syncfusion:Ribbon.BackStage>

        </syncfusion:Ribbon>

        <!-- Content Area — Dashboard Views -->
        <Grid Grid.Row="1" x:Name="ContentArea" Background="{StaticResource ContentBackground}">
            <!-- Default content will be the Enhanced Dashboard View -->
            <!-- Primary Enhanced Dashboard View -->
            <dashboard:EnhancedDashboardView x:Name="EnhancedDashboard"
                                           DataContext="{Binding}"
                                           Visibility="Visible"/>
        </Grid>

    </Grid>
</syncfusion:RibbonWindow>
