                                                   Label="âš™ï¸ Settings"
                                                   Background="Transparent"
                                                   Foreground="{DynamicResource Foreground}"
                                                   BorderThickness="0"
                                                   Padding="12,8"
                                                   FontWeight="SemiBold"
