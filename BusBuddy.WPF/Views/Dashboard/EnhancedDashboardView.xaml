                <Grid Margin="10">
                    <TextBlock Text="Fuel Management"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             FontSize="16"
                             Foreground="{DynamicResource SecondaryForeground}"/>
                </Grid>
            </ContentControl>

