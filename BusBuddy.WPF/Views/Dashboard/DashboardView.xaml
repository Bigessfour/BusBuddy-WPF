<UserControl x:Class="BusBuddy.WPF.Views.Dashboard.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BusBuddy.WPF.Views.Dashboard"
             xmlns:views="clr-namespace:BusBuddy.WPF.Views"
             xmlns:viewModels="clr-namespace:BusBuddy.WPF.ViewModels"
             xmlns:converters="clr-namespace:BusBuddy.WPF.Converters"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:fuel="clr-namespace:BusBuddy.WPF.Views.Fuel"
             xmlns:bus="clr-namespace:BusBuddy.WPF.Views.Bus"
             xmlns:driver="clr-namespace:BusBuddy.WPF.Views.Driver"
             xmlns:route="clr-namespace:BusBuddy.WPF.Views.Route"
             xmlns:schedule="clr-namespace:BusBuddy.WPF.Views.Schedule"
             xmlns:student="clr-namespace:BusBuddy.WPF.Views.Student"
             xmlns:maintenance="clr-namespace:BusBuddy.WPF.Views.Maintenance"
             xmlns:activity="clr-namespace:BusBuddy.WPF.Views.Activity"
             xmlns:ticket="clr-namespace:BusBuddy.WPF.Views.Ticket"
             xmlns:settings="clr-namespace:BusBuddy.WPF.Views.Settings"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance viewModels:DashboardViewModel}">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <!-- Navigation Button Style -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0,4,0,4" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="MainBorder" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="10,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Icon placeholder (can be customized per button) -->
                                <Border Grid.Column="0" Width="24" Height="24" Margin="0,0,10,0"
                                        Background="Transparent">
                                    <ContentPresenter x:Name="IconContent" Content="{Binding Icon}"/>
                                </Border>
                                
                                <!-- Button text -->
                                <TextBlock Grid.Column="1" Text="{TemplateBinding Content}" 
                                           VerticalAlignment="Center" Foreground="{TemplateBinding Foreground}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#385050" TargetName="MainBorder" />
                                <Setter Property="TextBlock.FontWeight" Value="SemiBold" />
                            </Trigger>
                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                <Setter Property="Background" Value="#385050" TargetName="MainBorder" />
                                <Setter Property="TextBlock.FontWeight" Value="Bold" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Tab Control Style -->
        <Style x:Key="DashboardTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="#f5f5f5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Tab Headers -->
                            <Border Grid.Row="0" Background="#e0e0e0" BorderThickness="0,0,0,1" BorderBrush="#ccc">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                    <TabPanel IsItemsHost="True" Margin="0,0,0,0"/>
                                </ScrollViewer>
                            </Border>
                            
                            <!-- Tab Content -->
                            <Border Grid.Row="1" 
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="0"
                                    Padding="8">
                                <ContentPresenter ContentSource="SelectedContent" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Tab Item Style -->
        <Style x:Key="DashboardTabItemStyle" TargetType="TabItem">
            <Setter Property="Foreground" Value="#555" />
            <Setter Property="Background" Value="#e0e0e0" />
            <Setter Property="BorderBrush" Value="#ccc" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="Margin" Value="0,0,2,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" BorderThickness="0,0,0,3" 
                                BorderBrush="Transparent"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter ContentSource="Header" Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#f5f5f5" TargetName="Border" />
                                <Setter Property="Foreground" Value="#2F4F4F" />
                                <Setter Property="BorderBrush" Value="#2F4F4F" TargetName="Border" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f0f0f0" TargetName="Border" />
                                <Setter Property="BorderBrush" Value="#aaa" TargetName="Border" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#2F4F4F">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Command="{Binding ToggleSidebarCommand}" 
                    Background="Transparent" BorderThickness="0"
                    VerticalAlignment="Center" Margin="16,0">
                <Path Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z" 
                      Fill="White" Width="24" Height="24" Stretch="Uniform"/>
            </Button>
            
            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock Text="{Binding DashboardTitle}" 
                       Foreground="White" FontSize="28" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="0,0,0,2"/>
                <TextBlock Text="Transportation Management System" 
                       Foreground="#b0c4c4" FontSize="14" FontStyle="Italic"
                       VerticalAlignment="Center" Margin="0"/>
            </StackPanel>
                       
            <!-- Add date display with enhanced styling -->
            <Border Grid.Column="2" Background="#264242" CornerRadius="4" 
                    Padding="12,8" Margin="20,0">
                <StackPanel Orientation="Vertical">
                    <TextBlock Foreground="White" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center">
                        <Run Text="{Binding Source={x:Static System:DateTime.Now}, StringFormat='{}{0:dddd}', Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock Foreground="#b0c4c4" FontSize="12" HorizontalAlignment="Center">
                        <Run Text="{Binding Source={x:Static System:DateTime.Now}, StringFormat='{}{0:MMMM d, yyyy}', Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="#1E3A3A" Width="240"
                    Visibility="{Binding IsSidebarVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    BorderBrush="#0c1f1f" BorderThickness="0,0,1,0">
                <DockPanel>
                    <!-- Logo/Title Area -->
                    <Border DockPanel.Dock="Top" Height="80" Background="#18302F" Padding="10">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="BUS BUDDY" Foreground="White" 
                                       FontSize="20" FontWeight="Bold" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Transportation Management" Foreground="#8fafaf" 
                                       FontSize="12" FontStyle="Italic"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Navigation Menu -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding NavigationItems}" Margin="8,10,8,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Content}" 
                                            Command="{Binding Command}"
                                            Style="{StaticResource NavigationButtonStyle}"
                                            Margin="0,4"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Column="1">
                <ContentControl Content="{Binding}">
                    <ContentControl.Resources>
                        <DataTemplate DataType="{x:Type viewModels:DashboardViewModel}">
                            <TabControl x:Name="MainTabControl" 
                                      SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}" 
                                      Style="{StaticResource DashboardTabControlStyle}"
                                      Margin="0" BorderThickness="0"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      HorizontalContentAlignment="Stretch"
                                      VerticalContentAlignment="Stretch">
                                <TabControl.ItemContainerStyle>
                                    <Style TargetType="TabItem" BasedOn="{StaticResource DashboardTabItemStyle}" />
                                </TabControl.ItemContainerStyle>
                                
                                <!-- Bus Management -->
                                <TabItem Header="Bus Management">
                                    <Border BorderBrush="#e0e0e0" BorderThickness="1">
                                        <bus:BusManagementView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                    </Border>
                                </TabItem>
                            
                            <!-- Driver Management -->
                            <TabItem Header="Driver Management">
                                <Border BorderBrush="#e0e0e0" BorderThickness="1">
                                    <driver:DriverManagementView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </Border>
                            </TabItem>
                            
                            <!-- Route Management -->
                            <TabItem Header="Route Management">
                                <Border BorderBrush="#e0e0e0" BorderThickness="1">
                                    <route:RouteManagementView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </Border>
                            </TabItem>
                            
                            <!-- Schedule Management -->
                            <TabItem Header="Schedule Management">
                                <Border BorderBrush="#e0e0e0" BorderThickness="1">
                                    <schedule:ScheduleManagementView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </Border>
                            </TabItem>
                            
                            <!-- Student Management -->
                            <TabItem Header="Student Management">
                                <Border BorderBrush="#e0e0e0" BorderThickness="1">
                                    <student:StudentManagementView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </Border>
                            </TabItem>
                            
                            <!-- Maintenance Tracking -->
                            <TabItem Header="Maintenance Tracking">
                                <Border BorderBrush="#e0e0e0" BorderThickness="1">
                                    <maintenance:MaintenanceTrackingView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </Border>
                            </TabItem>
                            
                            <!-- Fuel Management -->
                            <TabItem Header="Fuel Management">
                                <Border BorderBrush="#e0e0e0" BorderThickness="1">
                                    <fuel:FuelManagementView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </Border>
                            </TabItem>
                            
                            <!-- Activity Logging -->
                            <TabItem Header="Activity Logging">
                                <Border BorderBrush="#e0e0e0" BorderThickness="1">
                                    <activity:ActivityLoggingView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </Border>
                            </TabItem>
                            
                            <!-- Ticket Management -->
                            <TabItem Header="Ticket Management">
                                <Border BorderBrush="#e0e0e0" BorderThickness="1">
                                    <ticket:TicketManagementView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </Border>
                            </TabItem>
                            
                            <!-- Settings -->
                            <TabItem Header="Settings">
                                <Border BorderBrush="#e0e0e0" BorderThickness="1">
                                    <settings:SettingsView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </Border>
                            </TabItem>
                        </TabControl>
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
