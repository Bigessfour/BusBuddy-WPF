<UserControl x:Class="BusBuddy.WPF.Views.StudentEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Edit Student" FontSize="22" FontWeight="Bold" Margin="0,0,0,16"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top">
            <TextBox x:Name="NameTextBox" />
            <TextBox x:Name="GradeTextBox" />
            <TextBox x:Name="AddressTextBox" />
            <TextBox x:Name="ParentTextBox" />
            <TextBox x:Name="PhoneTextBox" />
            <Button Content="Save" Width="120" Height="36" Margin="0,16,0,0" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>
