<UserControl x:Class="BusBuddy.WPF.Views.BusManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <sf:SfDataGrid Grid.Row="0"
                       ItemsSource="{Binding Buses}"
                       SelectedItem="{Binding SelectedBus, Mode=TwoWay}"
                       AutoGenerateColumns="False">
            <sf:SfDataGrid.Columns>
                <sf:GridTextColumn MappingName="BusNumber" HeaderText="Bus Number"/>
                <sf:GridTextColumn MappingName="Year" HeaderText="Year"/>
                <sf:GridTextColumn MappingName="Make" HeaderText="Make"/>
                <sf:GridTextColumn MappingName="Model" HeaderText="Model"/>
                <sf:GridTextColumn MappingName="SeatingCapacity" HeaderText="Capacity"/>
                <sf:GridTextColumn MappingName="Status" HeaderText="Status"/>
                <sf:GridDateTimeColumn MappingName="DateLastInspection" HeaderText="Last Inspection"/>
            </sf:SfDataGrid.Columns>
        </sf:SfDataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add" Command="{Binding AddBusCommand}" Margin="5" />
            <Button Content="Update" Command="{Binding UpdateBusCommand}" Margin="5" />
            <Button Content="Delete" Command="{Binding DeleteBusCommand}" Margin="5" />
        </StackPanel>
    </Grid>
</UserControl>
