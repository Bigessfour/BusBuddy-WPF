<UserControl x:Class="BusBuddy.WPF.Views.XAI.XAIChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BusBuddy.WPF.Views.XAI"
             xmlns:viewModels="clr-namespace:BusBuddy.WPF.ViewModels"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance viewModels:XAIChatViewModel}"
             >

    <UserControl.Resources>
        <!-- Message templates and styles -->
        <DataTemplate x:Key="UserMessageTemplate">
            <Border Background="{DynamicResource BrandPrimaryBrush}"
                    CornerRadius="12,12,4,12"
                    Padding="16,12"
                    Margin="80,4,16,4"
                    HorizontalAlignment="Right">
                <TextBlock Text="{Binding Message}"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource ProfessionalTextPrimary}"
                           FontSize="14"/>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="AIMessageTemplate">
            <Border Background="{DynamicResource SurfaceVariantBrush}"
                    CornerRadius="12,12,12,4"
                    Padding="16,12"
                    Margin="16,4,80,4"
                    HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock Text="XAI Assistant"
                               FontWeight="SemiBold"
                               FontSize="12"
                               Foreground="{DynamicResource BrandPrimaryBrush}"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding Message}"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource ContentForeground}"
                               FontSize="14"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="SystemMessageTemplate">
            <Border Background="{DynamicResource BrandFleetGreenBrush}"
                    CornerRadius="16"
                    Padding="12,8"
                    Margin="40,8,40,8"
                    HorizontalAlignment="Center">
                <TextBlock Text="{Binding Message}"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource ProfessionalTextPrimary}"
                           FontSize="12"
                           HorizontalAlignment="Center"/>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Background="{DynamicResource SurfaceBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource BrandPrimaryBrush}"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="{DynamicResource AccentBackground}"
                            Width="48" Height="48"
                            CornerRadius="24"
                            Margin="0,0,16,0">
                        <TextBlock Text="🤖"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="XAI Chat Assistant"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource ProfessionalTextPrimary}"/>
                        <TextBlock Text="AI-Powered Transportation Management Assistant"
                                   FontSize="14"
                                   Foreground="{DynamicResource ProfessionalTextSecondary}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{DynamicResource BrandFleetGreenBrush}"
                            CornerRadius="16"
                            Padding="12,6"
                            Margin="8,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10"
                                     Fill="{DynamicResource ProfessionalTextPrimary}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,8,0"/>
                            <TextBlock Text="AI Online"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource ProfessionalTextPrimary}"/>
                        </StackPanel>
                    </Border>

                    <syncfusion:ButtonAdv Content="🔄"
                                          Style="{StaticResource IconButtonAdvStyle}"
                                          ToolTip="Clear Chat"
                                          Command="{Binding ClearChatCommand}"
                                          Margin="16,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Chat Messages Area -->
        <Border Grid.Row="1"
                Background="{DynamicResource ContentBackground}"
                Padding="0">
            <Grid>
                <ScrollViewer x:Name="ChatScrollViewer"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="0,16">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplateSelector>
                            <local:ChatMessageTemplateSelector
                                UserMessageTemplate="{StaticResource UserMessageTemplate}"
                                AIMessageTemplate="{StaticResource AIMessageTemplate}"
                                SystemMessageTemplate="{StaticResource SystemMessageTemplate}"/>
                        </ItemsControl.ItemTemplateSelector>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Typing Indicator -->
                <Border Background="{DynamicResource SurfaceVariantBrush}"
                        CornerRadius="12,12,12,4"
                        Padding="16,12"
                        Margin="16,4,80,16"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Visibility="{Binding IsTyping, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="XAI Assistant is typing"
                                   FontSize="12"
                                   Foreground="{DynamicResource ContentForeground}"
                                   Margin="0,0,8,0"/>
                        <syncfusion:SfBusyIndicator IsBusy="True"
                                                    AnimationType="Dots"
                                                    Height="16" Width="24"
                                                    Style="{StaticResource LoadingIndicatorStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Input Area -->
        <Border Grid.Row="2"
                Background="{DynamicResource SurfaceVariantBrush}"
                BorderBrush="{DynamicResource SurfaceBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Message Input -->
                <Border Grid.Column="0"
                        Style="{StaticResource StandardInputBorderStyle}"
                        Margin="0,0,16,0">
                    <TextBox x:Name="MessageInput"
                             Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14"
                             MinHeight="40"
                             MaxHeight="120"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             BorderThickness="0"
                             Background="Transparent"
                             Foreground="{DynamicResource ContentForeground}"
                             KeyDown="MessageInput_KeyDown"/>
                </Border>

                <!-- Send Button -->
                <syncfusion:ButtonAdv Grid.Column="1"
                                      Content="Send"
                                      Style="{StaticResource PrimaryButtonAdvStyle}"
                                      Command="{Binding SendMessageCommand}"
                                      IsEnabled="{Binding CanSendMessage}"
                                      Width="80"
                                      Height="40"/>
            </Grid>
        </Border>

        <!-- Quick Actions Panel -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="12"
                Padding="16"
                Margin="24"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="300"
                Visibility="{Binding ShowQuickActions, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="Quick Actions"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ContentForeground}"
                           Margin="0,0,0,16"/>

                <syncfusion:ButtonAdv Content="📊 Fleet Status"
                                      Style="{StaticResource SecondaryButtonAdvStyle}"
                                      Command="{Binding QuickFleetStatusCommand}"
                                      Margin="0,4"
                                      HorizontalAlignment="Stretch"/>

                <syncfusion:ButtonAdv Content="🚌 Find Bus"
                                      Style="{StaticResource SecondaryButtonAdvStyle}"
                                      Command="{Binding QuickFindBusCommand}"
                                      Margin="0,4"
                                      HorizontalAlignment="Stretch"/>

                <syncfusion:ButtonAdv Content="📍 Route Info"
                                      Style="{StaticResource SecondaryButtonAdvStyle}"
                                      Command="{Binding QuickRouteInfoCommand}"
                                      Margin="0,4"
                                      HorizontalAlignment="Stretch"/>

                <syncfusion:ButtonAdv Content="⚠️ Emergency"
                                      Style="{StaticResource EmergencyButtonAdvStyle}"
                                      Command="{Binding QuickEmergencyCommand}"
                                      Margin="0,8,0,4"
                                      HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>


