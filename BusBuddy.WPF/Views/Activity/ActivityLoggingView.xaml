<UserControl x:Class="BusBuddy.WPF.Views.Activity.ActivityLoggingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:syncfusionGrid="clr-namespace:Syncfusion.UI.Xaml.Grid;assembly=Syncfusion.SfGrid.WPF"
             xmlns:syncfusionChart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Command Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="0,0,10,0">
                <Button.ToolTip>
                    <ToolTip Content="Refresh the activity log data"/>
                </Button.ToolTip>
            </Button>
            <Button Content="Export" Command="{Binding ExportCommand}" Margin="0,0,10,0">
                <Button.ToolTip>
                    <ToolTip Content="Export the filtered activity logs to CSV"/>
                </Button.ToolTip>
            </Button>
            <Button Content="Clear Filters" Command="{Binding ClearFiltersCommand}" Margin="0,0,10,0">
                <Button.ToolTip>
                    <ToolTip Content="Reset all filters to default values"/>
                </Button.ToolTip>
            </Button>
            <Button Content="View Details" Command="{Binding ViewDetailsCommand}" Margin="0,0,10,0">
                <Button.ToolTip>
                    <ToolTip Content="View detailed information for the selected log entry"/>
                </Button.ToolTip>
            </Button>
        </StackPanel>

        <!-- Filters -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Start Date:" VerticalAlignment="Center" Margin="0,0,5,0" Grid.Column="0"/>
            <DatePicker SelectedDate="{Binding StartDate}" Grid.Column="1" Margin="0,0,15,0" Width="120"/>

            <TextBlock Text="End Date:" VerticalAlignment="Center" Margin="0,0,5,0" Grid.Column="2"/>
            <DatePicker SelectedDate="{Binding EndDate}" Grid.Column="3" Margin="0,0,15,0" Width="120"/>

            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0" Grid.Column="4"/>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                    Grid.Column="5" Width="200" Padding="5,3">
                <TextBox.ToolTip>
                    <ToolTip Content="Search in action, user, and details fields"/>
                </TextBox.ToolTip>
            </TextBox>
        </Grid>

        <!-- Activity Log DataGrid -->
        <syncfusionGrid:SfDataGrid x:Name="LogsDataGrid"
                                  Grid.Row="2"
                                  ItemsSource="{Binding Logs}"
                                  SelectedItem="{Binding SelectedLog, Mode=TwoWay}"
                                  AutoGenerateColumns="False"
                                  SelectionMode="Single"
                                  AllowFiltering="True"
                                  AllowSorting="True">
            <syncfusionGrid:SfDataGrid.Columns>
                <syncfusionGrid:GridTextColumn MappingName="Id" HeaderText="ID" Width="60"/>
                <syncfusionGrid:GridDateTimeColumn MappingName="Timestamp" HeaderText="Timestamp" DisplayBinding="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss'}" Width="150"/>
                <syncfusionGrid:GridTextColumn MappingName="Action" HeaderText="Action" Width="200"/>
                <syncfusionGrid:GridTextColumn MappingName="User" HeaderText="User" Width="120"/>
                <syncfusionGrid:GridTextColumn MappingName="Details" HeaderText="Details" Width="*" 
                                              TextTrimming="CharacterEllipsis" MaximumWidth="400"/>
            </syncfusionGrid:SfDataGrid.Columns>
        </syncfusionGrid:SfDataGrid>

        <!-- Loading Indicator -->
        <Border Grid.Row="0" Grid.RowSpan="3" Background="#80FFFFFF" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading..." FontSize="16" HorizontalAlignment="Center"/>
                <ProgressBar Width="200" Height="15" IsIndeterminate="True" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
