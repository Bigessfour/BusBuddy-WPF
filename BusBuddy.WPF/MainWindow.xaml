<Window x:Class="BusBuddy.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusBuddy.WPF"
        xmlns:views="clr-namespace:BusBuddy.WPF.Views"
        xmlns:bus="clr-namespace:BusBuddy.WPF.Views.Bus"
        xmlns:dashboard="clr-namespace:BusBuddy.WPF.Views.Dashboard"
        xmlns:route="clr-namespace:BusBuddy.WPF.Views.Route"
        xmlns:driver="clr-namespace:BusBuddy.WPF.Views.Driver"
        xmlns:schedule="clr-namespace:BusBuddy.WPF.Views.Schedule"
        xmlns:viewModels="clr-namespace:BusBuddy.WPF.ViewModels"
        xmlns:student="clr-namespace:BusBuddy.WPF.Views.Student"
        xmlns:fuel="clr-namespace:BusBuddy.WPF.Views.Fuel"
        xmlns:activity="clr-namespace:BusBuddy.WPF.Views.Activity"
        xmlns:maintenance="clr-namespace:BusBuddy.WPF.Views.Maintenance"
        xmlns:settings="clr-namespace:BusBuddy.WPF.Views.Settings"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        xmlns:converters="clr-namespace:BusBuddy.WPF.Converters"
        xmlns:scheduleViewModels="clr-namespace:BusBuddy.WPF.ViewModels.Schedule"
        mc:Ignorable="d"
        Title="Bus Buddy - Transportation Management System"
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        syncfusionskin:SfSkinManager.VisualStyle="FluentDark"
        Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- FluentDark theme resources are automatically applied via SfSkinManager -->
                <!-- Custom styles and resources are merged from CustomStyles.xaml -->
                <ResourceDictionary Source="Resources/Themes/CustomStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Add converters - Only those not already in App.xaml -->
            <local:DebugConverter x:Key="DebugConverter" />
            <!-- BooleanToDeprecatedForegroundConverter and BooleanToVisibilityConverter are now global -->

            <!-- Navigation Panel Style - Uses official Syncfusion FluentDark theme resources -->
            <Style x:Key="BusBuddyNavigationPanelStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource SecondaryBorder}"/>
                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="0"/>
            </Style>

            <!-- Navigation ListView Style — Theme-aware -->
            <Style x:Key="BusBuddyNavigationListViewStyle" TargetType="ListView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- Navigation ListView Item Style — Theme-aware -->
        <Style x:Key="BusBuddyNavigationListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentBackgroundBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource AccentForegroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Navigation Button Style — Uses consolidated BusBuddyButtonAdvStyle -->
        <Style x:Key="BusBuddyNavigationButtonStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddyButtonAdvStyle}">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>

        <!-- Icon Button Style — Uses consolidated BusBuddyButtonAdvStyle -->
        <Style x:Key="BusBuddyIconButtonStyle" TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource BusBuddyButtonAdvStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="SizeMode" Value="Small"/>
        </Style>

        <!-- FluentDark theme will automatically style the window -->
        <!-- Removed custom BusBuddyWindowStyle as it conflicts with SfSkinManager.VisualStyle="FluentDark" -->

        <!-- DataTemplates have been moved to App.xaml for global availability -->
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- Enhanced Navigation with SfNavigationDrawer Implementation -->
        <syncfusion:SfNavigationDrawer x:Name="MainNavigationDrawer"
                                      DrawerWidth="280"
                                      Position="Left"
                                      DisplayMode="Expanded"
                                      EnableSwipeGesture="True"
                                      IsOpen="True"
                                      DrawerBackground="{DynamicResource ProfessionalSurfaceDark}"
                                      syncfusionskin:SfSkinManager.VisualStyle="FluentDark">

            <!-- Professional Navigation Header -->
            <syncfusion:SfNavigationDrawer.DrawerHeaderView>
                <Grid Background="{DynamicResource BrandPrimaryBrush}" Height="70">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                        <!-- Professional Bus Icon -->
                        <Border Background="{DynamicResource BrandSchoolBusYellowBrush}"
                                Width="40" Height="40"
                                CornerRadius="8"
                                Margin="0,0,15,0">
                            <TextBlock Text="🚌"
                                      FontSize="20"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <!-- Professional Title -->
                        <StackPanel>
                            <TextBlock Text="Bus Buddy Pro"
                                      FontSize="20"
                                      FontWeight="Bold"
                                      Foreground="{DynamicResource ProfessionalTextPrimary}"/>
                            <TextBlock Text="Transportation Management"
                                      FontSize="12"
                                      Foreground="{DynamicResource ProfessionalTextSecondary}"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </syncfusion:SfNavigationDrawer.DrawerHeaderView>

            <!-- Enhanced Navigation Content -->
            <syncfusion:SfNavigationDrawer.DrawerContentView>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Quick Actions Panel -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource ProfessionalSurfaceLight}"
                            Margin="10,10,10,5"
                            CornerRadius="8"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="Quick Actions"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource ProfessionalTextPrimary}"
                                      Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <syncfusion:ButtonAdv Style="{StaticResource BusBuddyIconButtonAdvStyle}"
                                                    Content="🚨"
                                                    ToolTip="Emergency Alert"
                                                    Width="36" Height="36"
                                                    Margin="2"/>
                                <syncfusion:ButtonAdv Style="{StaticResource BusBuddyIconButtonAdvStyle}"
                                                    Content="📊"
                                                    ToolTip="Reports"
                                                    Width="36" Height="36"
                                                    Margin="2"/>
                                <syncfusion:ButtonAdv Style="{StaticResource BusBuddyIconButtonAdvStyle}"
                                                    Content="⚙️"
                                                    ToolTip="Settings"
                                                    Width="36" Height="36"
                                                    Margin="2"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Professional Navigation List -->
                    <ScrollViewer Grid.Row="1"
                                  Margin="10,5,10,10"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding NavigationItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,2"
                                            CornerRadius="6"
                                            Background="Transparent">
                                        <syncfusion:ButtonAdv Command="{Binding Path=DataContext.NavigateToCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                                                            CommandParameter="{Binding ViewModelName}"
                                                            Style="{StaticResource BusBuddyNavigationButtonAdvStyle}"
                                                            ToolTip="{Binding Tooltip}"
                                                            syncfusionskin:SfSkinManager.VisualStyle="FluentDark">
                                            <syncfusion:ButtonAdv.Content>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Professional Icon with Background -->
                                                    <Border Grid.Column="0"
                                                            Background="{DynamicResource BrandPrimaryBrush}"
                                                            Width="32" Height="32"
                                                            CornerRadius="6"
                                                            Margin="0,0,12,0">
                                                        <TextBlock Text="{Binding Icon}"
                                                                  FontSize="14"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  Foreground="{DynamicResource ProfessionalTextPrimary}"/>
                                                    </Border>

                                                    <!-- Navigation Text -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}"
                                                                  FontSize="14"
                                                                  FontWeight="SemiBold"
                                                                  Foreground="{Binding IsDeprecated, Converter={StaticResource BooleanToDeprecatedForegroundConverter}, FallbackValue={DynamicResource ProfessionalTextPrimary}}">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsDeprecated}" Value="True">
                                                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>

                                                        <!-- Optional Description -->
                                                        <TextBlock Text="{Binding Description}"
                                                                  FontSize="11"
                                                                  Foreground="{DynamicResource ProfessionalTextSecondary}"
                                                                  Margin="0,2,0,0"
                                                                  Visibility="{Binding Description, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                    </StackPanel>

                                                    <!-- Status Indicators -->
                                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                        <TextBlock Text="⚠️"
                                                                  FontSize="12"
                                                                  Foreground="{DynamicResource BrandSafetyOrangeBrush}"
                                                                  HorizontalAlignment="Right"
                                                                  Visibility="{Binding IsDeprecated, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                        <TextBlock Text="NEW"
                                                                  FontSize="10"
                                                                  FontWeight="Bold"
                                                                  Foreground="{DynamicResource BrandFleetGreenBrush}"
                                                                  HorizontalAlignment="Right"
                                                                  Visibility="{Binding IsNew, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </syncfusion:ButtonAdv.Content>
                                        </syncfusion:ButtonAdv>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Professional Footer -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource ProfessionalSurfaceLight}"
                            Margin="10,5,10,10"
                            CornerRadius="8"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="System Status"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource ProfessionalTextPrimary}"
                                      Margin="0,0,0,8"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Ellipse Grid.Column="0"
                                        Width="8" Height="8"
                                        Fill="{DynamicResource BrandFleetGreenBrush}"
                                        Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1"
                                          Text="All Systems Operational"
                                          FontSize="11"
                                          Foreground="{DynamicResource ProfessionalTextSecondary}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </syncfusion:SfNavigationDrawer.DrawerContentView>

            <!-- Enhanced Main Content Area -->
            <syncfusion:SfNavigationDrawer.ContentView>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Professional Header Bar -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource BrandPrimaryBrush}"
                            Height="60">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Navigation Toggle -->
                            <syncfusion:ButtonAdv Grid.Column="0"
                                                x:Name="MenuToggleButton"
                                                Content="☰"
                                                Style="{StaticResource BusBuddyIconButtonAdvStyle}"
                                                Click="MenuToggleButton_Click"
                                                ToolTip="Toggle Navigation"
                                                Margin="15,0,0,0"/>

                            <!-- Professional Title Section -->
                            <StackPanel Grid.Column="1"
                                       Orientation="Horizontal"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center">
                                <TextBlock Text="Bus Buddy Pro — School Transportation Management"
                                          VerticalAlignment="Center"
                                          Foreground="{DynamicResource ProfessionalTextPrimary}"
                                          FontSize="18"
                                          FontWeight="SemiBold"/>

                                <!-- Debug Information (Development Only) -->
                                <TextBlock Text="{Binding CurrentViewModel, Converter={StaticResource DebugConverter}, StringFormat=' | Current View: {0}'}"
                                          Foreground="{DynamicResource ProfessionalTextSecondary}"
                                          Margin="15,0,0,0"
                                          VerticalAlignment="Center"
                                          FontSize="12"
                                          Visibility="{Binding IsDebugMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>

                            <!-- Professional Action Buttons -->
                            <StackPanel Grid.Column="2"
                                       Orientation="Horizontal"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0">
                                <syncfusion:ButtonAdv Content="📊"
                                                    Style="{StaticResource BusBuddyIconButtonAdvStyle}"
                                                    ToolTip="System Dashboard"
                                                    Margin="5,0"/>
                                <syncfusion:ButtonAdv Content="🔔"
                                                    Style="{StaticResource BusBuddyIconButtonAdvStyle}"
                                                    ToolTip="Notifications"
                                                    Margin="5,0"/>
                                <syncfusion:ButtonAdv Content="⚙️"
                                                    Style="{StaticResource BusBuddyIconButtonAdvStyle}"
                                                    ToolTip="Settings"
                                                    Margin="5,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Main Content Container -->
                    <ContentControl x:Name="MainContentControl"
                                    Grid.Row="1"
                                    Content="{Binding CurrentViewModel}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="{DynamicResource ProfessionalSurfaceMedium}"
                                    Margin="0"/>
                </Grid>
            </syncfusion:SfNavigationDrawer.ContentView>
        </syncfusion:SfNavigationDrawer>
    </Grid>
</Window>
