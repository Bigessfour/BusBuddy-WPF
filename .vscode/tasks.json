{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean Solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "BusBuddy.WPF/BusBuddy.WPF.csproj",
                "--verbosity",
                "normal"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "Restore Packages",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "BusBuddy.WPF/BusBuddy.WPF.csproj",
                "--verbosity",
                "normal"
            ],
            "group": "build",
            "dependsOn": "Clean Solution",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "Build Solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "BusBuddy.WPF/BusBuddy.WPF.csproj",
                "--verbosity",
                "normal",
                "--no-restore"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Restore Packages",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": ["$msCompile"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Application",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "BusBuddy.WPF/BusBuddy.WPF.csproj",
                "--no-build",
                "--verbosity",
                "normal"
            ],
            "group": "build",
            "dependsOn": "Build Solution",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "isBackground": true,
            "problemMatcher": ["$msCompile"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Full Clean & Build & Run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean Solution",
                "Restore Packages",
                "Build Solution",
                "Run Application"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}
