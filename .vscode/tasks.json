            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                {
                    "owner": "powershell-analyzer",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^(.*)\\s+:\\s+(Warning|Error)\\s+(.*)$",
