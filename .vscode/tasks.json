{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean Solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "BusBuddy.sln",
                "--verbosity",
                "minimal"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "Restore Packages",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "BusBuddy.sln",
                "--verbosity",
                "minimal"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "Build Solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "BusBuddy.sln",
                "--verbosity",
                "minimal"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$msCompile",
                {
                    "base": "$msCompile",
                    "pattern": [
                        {
                            "regexp": "^(.*)\\((\\d+),(\\d+)\\):\\s+(error|warning|info)\\s+(CS\\d+):\\s+(.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "code": 5,
                            "message": 6
                        }
                    ]
                }
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Application",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "BusBuddy.WPF/BusBuddy.WPF.csproj",
                "--verbosity",
                "minimal"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "base": "$msCompile",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^info: Microsoft.Hosting.Lifetime",
                        "endsPattern": "^\\s*Application started\\.|^\\s*Now listening on:|^\\s*Hosting environment:"
                    }
                }
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Application with Enhanced Startup Monitoring",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "BusBuddy.WPF/BusBuddy.WPF.csproj",
                "--verbosity",
                "detailed"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "base": "$msCompile",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^info: Microsoft.Hosting.Lifetime",
                        "endsPattern": "^\\s*Application started\\.|^\\s*Now listening on:|^\\s*Hosting environment:"
                    }
                },
                {
                    "owner": "startup-exceptions",
                    "fileLocation": "relative",
                    "pattern": {
                        "regexp": "^.*\\[ERROR\\].*ACTIONABLE.*EXCEPTION.*:\\s+(.*)\\s+at\\s+(.*):(\\d+)$",
                        "file": 2,
                        "line": 3,
                        "message": 1
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^info: Microsoft.Hosting.Lifetime",
                        "endsPattern": "^\\s*Application started\\.|^\\s*Now listening on:|^\\s*Hosting environment:"
                    }
                },
                {
                    "owner": "xaml-parsing",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^.*XamlParseException.*'(.*)' Line number '(\\d+)'.*line position '(\\d+)'.*$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "message": 1
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^info: Microsoft.Hosting.Lifetime",
                        "endsPattern": "^\\s*Application started\\.|^\\s*Now listening on:|^\\s*Hosting environment:"
                    }
                },
                {
                    "owner": "dispatcher-exceptions",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^.*DISPATCHER EXCEPTION.*:\\s+(.*)\\s+-\\s+(.*)$",
                        "message": 1
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^info: Microsoft.Hosting.Lifetime",
                        "endsPattern": "^\\s*Application started\\.|^\\s*Now listening on:|^\\s*Hosting environment:"
                    }
                }
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "ENABLE_ENHANCED_STARTUP_LOGGING": "true",
                    "STARTUP_EXCEPTION_ENRICHMENT": "true"
                }
            }
        },
        {
            "label": "Full Clean & Build & Run (Sequential)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean Solution",
                "Restore Packages",
                "Build Solution",
                "Run Application"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Build and Start Debug Filter",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "dotnet build BusBuddy.sln --verbosity minimal; if ($LASTEXITCODE -eq 0) { Write-Host '‚úÖ Build successful - Starting Debug Filter...'; dotnet run --project BusBuddy.WPF/BusBuddy.WPF.csproj --no-build -- --start-debug-filter; } else { Write-Host '‚ùå Build failed - Debug Filter not started'; }"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$msCompile",
                {
                    "owner": "debug-filter",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^üö®\\s+CRITICAL.*:\\s+(.*)$",
                        "message": 1
                    }
                },
                {
                    "owner": "debug-filter-high",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^‚ö†Ô∏è\\s+HIGH.*:\\s+(.*)$",
                        "message": 1
                    }
                }
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Export Debug Issues to JSON",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "dotnet run --project BusBuddy.WPF/BusBuddy.WPF.csproj --no-build -- --export-debug-json --output-file logs/debug-issues-$(Get-Date -Format 'yyyyMMdd-HHmmss').json"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Start Real-Time Debug Streaming",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Write-Host 'üéØ Starting real-time debug streaming...' -ForegroundColor Cyan; dotnet run --project BusBuddy.WPF/BusBuddy.WPF.csproj --no-build -- --start-streaming"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "realtime-debug",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^üéØ\\s+REAL-TIME ALERT.*:\\s+(.*)$",
                        "message": 1
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^üéØ Starting real-time debug streaming",
                        "endsPattern": "^üéØ REAL-TIME STREAMING: Started"
                    }
                }
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build Solution with Enhanced Debug Output",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build Solution",
                "Start Real-Time Debug Streaming"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}
