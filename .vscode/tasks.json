{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": ["build", "BusBuddy.WPF/BusBuddy.WPF.csproj"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "command": "dotnet",
            "type": "shell",
            "args": ["run", "--project", "BusBuddy.WPF/BusBuddy.WPF.csproj"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "dependsOn": "build"
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "shell",
            "args": ["clean", "BusBuddy.WPF/BusBuddy.WPF.csproj"],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "restore",
            "command": "dotnet",
            "type": "shell",
            "args": ["restore", "BusBuddy.WPF/BusBuddy.WPF.csproj"],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "shell",
            "args": ["test", "BusBuddy.Tests/BusBuddy.Tests.csproj"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
