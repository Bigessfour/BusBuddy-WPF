# BusBuddy Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Syncfusion License Key
# Get your license key from: https://syncfusion.com/account/downloads
SYNCFUSION_LICENSE_KEY=your_syncfusion_license_key_here

# XAI API Key  
# Get your API key from: https://x.ai/
XAI_API_KEY=your_xai_api_key_here

# Database Connection Strings (if needed)
# AZURE_DB_CONNECTION_STRING=your_azure_connection_string_here
# LOCAL_DB_CONNECTION_STRING=your_local_connection_string_here

# Google Earth Engine (if used)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
# GEE_PROJECT_ID=your_gee_project_id

# Other API Keys (add as needed)
# WEATHER_API_KEY=your_weather_api_key
# MAPS_API_KEY=your_maps_api_key
