          "replaces": "broken bb-tools function",
          "working_independently": true
        }
      }
    }
  },
  "tool_standards": {
    "versioning": {
      "scheme": "semantic_versioning",
      "format": "MAJOR.MINOR.PATCH",
      "increment_rules": {
        "major": "Breaking changes to function signatures or behavior",
        "minor": "New features, functions, or non-breaking enhancements",
        "patch": "Bug fixes, documentation updates, minor improvements"
      }
    },
    "function_naming": {
      "pattern": "Verb-BusBuddyNoun",
      "examples": [
        "Start-BusBuddyDebugFilter",
        "Review-BusBuddyProblems",
        "Format-BusBuddyXaml"
      ],
      "aliases": {
        "pattern": "bb-*",
        "examples": [
          "bb-debug-start",
          "bb-problems",
          "bb-xaml-format"
        ]
      }
    },
    "safety_requirements": {
      "backup_before_modify": true,
      "xml_validation": true,
      "rollback_on_error": true,
      "dry_run_mode": "recommended",
      "error_handling": "comprehensive"
    },
    "documentation_standards": {
      "synopsis_required": true,
      "description_required": true,
      "parameters_documented": true,
      "examples_provided": "recommended",
      "help_integration": true
    },
    "integration_patterns": {
      "vscode_tasks": true,
      "powershell_profile": true,
      "debug_helper": true,
      "problems_panel": true,
      "task_explorer": true
    }
  },
  "reusability_patterns": {
    "base_functions": {
      "description": "Core reusable functions that can be imported by other tools",
      "location": "Tools/Base/",
      "functions": [
        "Test-XamlSyntax",
        "Backup-XamlFiles",
        "Safe-BulkXamlUpdate",
        "Get-BusBuddyWorkspacePath",
        "Invoke-BuildWithValidation",
        "Show-ColoredOutput"
      ]
    },
    "module_structure": {
      "description": "PowerShell module structure for organized tool management",
      "suggested_structure": {
        "Tools/Modules/BusBuddy.Core/": "Core utility functions",
        "Tools/Modules/BusBuddy.XAML/": "XAML processing functions",
        "Tools/Modules/BusBuddy.Debug/": "Debug integration functions",
        "Tools/Modules/BusBuddy.Problems/": "Problems analysis functions"
      }
    },
    "shared_configurations": {
      "description": "Shared configuration files and patterns",
      "files": [
        "Tools/Config/WorkspacePaths.json",
        "Tools/Config/DefaultSettings.json",
        "Tools/Config/VSCodeTasks.json"
      ]
    }
  },
  "tool_lifecycle": {
    "development": {
      "create_in": "Tools/Development/",
      "test_thoroughly": true,
      "document_functions": true,
      "validate_safety": true
    },
    "testing": {
      "test_with_real_files": false,
      "use_test_workspace": true,
      "validate_rollback": true,
      "check_edge_cases": true
    },
    "production": {
      "move_to": "Tools/Scripts/",
      "update_inventory": true,
      "update_profile": true,
      "create_vscode_task": true
    },
    "deprecation": {
      "mark_deprecated": true,
      "provide_migration_path": true,
      "remove_after": "2 major versions",
      "update_documentation": true
    }
  }
}
