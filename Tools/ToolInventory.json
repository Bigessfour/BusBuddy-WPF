          "description": "Comprehensive problems analysis with VS Code integration",
          "functions": [
            "Get-BuildProblems",
            "Get-XAMLProblems",
            "Invoke-AutoFix",
            "Show-ProblemsAnalysis",
            "Export-ProblemsReport"
          ],
          "aliases": [
            "bb-problems",
            "bb-fix",
            "bb-schedule-problems",
            "bb-summary",
            "bb-report"
          ],
          "dependencies": ["VS Code", "dotnet CLI"],
          "vscode_integration": true,
          "auto_fix_capable": true
        }
      }
    },
    "environment_setup": {
      "description": "Tools for development environment configuration",
      "tools": {
        "Novice-Setup": {
          "path": "Tools/Config/Novice-Setup.ps1",
          "version": "1.0.0",
