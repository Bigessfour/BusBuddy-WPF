    "description": "Centralized inventory of Bus Buddy PowerShell development tools",
    "maintainer": "Bus Buddy Development Team"
  },
  "categories": {
    "xaml_processing": {
      "description": "Tools for XAML file processing, validation, and formatting",
      "tools": {
        "Format-XamlFiles": {
          "path": "Tools/Scripts/Format-XamlFiles.ps1",
          "version": "1.2.0",
          "description": "Comprehensive XAML formatting with XML-aware processing",
          "functions": [
            "Format-XamlFile",
            "Test-XamlSyntax",
            "Backup-XamlFiles",
            "Safe-BulkXamlUpdate"
          ],
          "aliases": [
            "xaml-format",
            "bb-xaml-format",
            "bb-xaml-validate",
            "bb-xaml-clean"
          ],
          "dependencies": ["System.Xml"],
          "safe_mode": true,
          "backup_enabled": true,
          "xml_validation": true
        },
        "fix-xaml-namespace": {
          "path": "fix-xaml-namespace.ps1",
          "version": "1.1.0",
          "description": "Emergency repair tool for corrupted XAML namespace attributes",
          "functions": [
            "Repair-NamespaceCorruption"
          ],
          "aliases": [],
          "dependencies": [],
          "safe_mode": true,
          "emergency_tool": true
        }
      }
    },
    "debug_integration": {
      "description": "Tools for debug monitoring and integration with DebugHelper",
      "tools": {
        "test-debug-filter": {
          "path": "Tools/Scripts/test-debug-filter.ps1",
          "version": "1.0.0",
          "description": "Test debug filter functionality",
          "functions": [
            "Test-DebugFilter"
          ],
          "aliases": [
            "bb-debug-test"
          ],
          "dependencies": ["BusBuddy.WPF"],
          "integration_point": "DebugHelper.TestAutoFilter()"
        }
      }
    },
    "problems_analysis": {
