          ],
          "aliases": [
            "bb-help",
            "bb-novice"
          ],
          "dependencies": ["PowerShell 7.5.2"],
          "auto_load": true,
          "beginner_friendly": true
        }
      }
    },
    "core_integration": {
      "description": "Core PowerShell profile functions and VS Code integration",
      "tools": {
        "BusBuddy-PowerShell-Profile": {
          "path": "BusBuddy-PowerShell-Profile.ps1",
          "version": "2.0.0",
