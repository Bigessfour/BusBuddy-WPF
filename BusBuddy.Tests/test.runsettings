<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <RunConfiguration>
    <!-- Completely disable parallel execution for database tests -->
    <MaxCpuCount>1</MaxCpuCount> <!-- Use single processor only -->
    <DisableParallelization>true</DisableParallelization>
    
    <!-- Force sequential execution -->
    <TargetFrameworkVersion>net8.0</TargetFrameworkVersion>
    <TestSessionTimeout>600000</TestSessionTimeout> <!-- 10 minutes total timeout -->
  </RunConfiguration>
  
  <!-- NUnit specific settings -->
  <NUnit>
    <!-- Force single worker for sequential execution -->
    <NumberOfTestWorkers>1</NumberOfTestWorkers>
    
    <!-- Completely disable parallel execution at all levels -->
    <Parallelizable>false</Parallelizable>
    
    <!-- Synchronize test execution -->
    <SynchronousEvents>true</SynchronousEvents>
    
    <!-- Force deterministic test order -->
    <RandomSeed>0</RandomSeed> <!-- Deterministic seed instead of random -->
    
    <!-- Default timeout for tests -->
    <DefaultTimeout>30000</DefaultTimeout>
    
    <!-- Work directory for tests -->
    <WorkDirectory>TestResults</WorkDirectory>
    
    <!-- Verbose output -->
    <Verbosity>1</Verbosity>
  </NUnit>
  
  <!-- Data collection settings -->
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat Code Coverage">
        <Configuration>
          <Format>cobertura</Format>
          <Include>[Bus_Buddy]*</Include>
          <Exclude>[*Tests*]*,[*Test*]*</Exclude>
          <ExcludeByAttribute>Obsolete,GeneratedCodeAttribute,CompilerGeneratedAttribute</ExcludeByAttribute>
          <ExcludeByFile>**/bin/**/*,**/obj/**/*,**/TestResults/**/*</ExcludeByFile>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
